@{
    ViewBag.Title = "ViewOffense";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper-inn">


    <div class="col-lg-12 pad">
        <h1 class="page-header">View Existing Offense/Parivad</h1>
    </div>
    <div class="row">
        <!-- Tab1 -->


        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <!--Table-->
                    <div id="tbl" class="table-responsive">
                        <table class="table table-striped table-bordered table-hover gridtable">

                            <thead>
                                <tr>
                                    <th>District</th>
                                    <th>OffensePlace</th>
                                    <th>Offense Date</th>
                                    <th>Offense Time</th>
                                    <th>User Type</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                    @foreach (var item in ViewData["OffenderList"] as IEnumerable<FMDSS.Models.ForestProtection.OffenseReg>)
                                    {
                                        if (item.OffenseCode != "") { 
                                        <tr>
                                            <td class="reqid">
                                                @Html.DisplayFor(model => item.District)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.OffensePlace)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.OffenseDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.OffenseTime)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.UserRole)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.ActionStatus)
                                            </td>
                                        </tr>
                                        }                                        
                                    }
                                
                            </tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/js/jquery.min.js"></script>
<script type="text/javascript">
    var RootUrl = '@Url.Content("~/")';

    $(document).ready(function () {

        $('.gridtable').DataTable({
            responsive: true
        });
    })
</script>