                                                </div>
                                            </div>
                                            <div id="divBsrType" class="col-lg-6">
                                                <label>BSR Material Cost: <span class="mandatory">*</span></label>
                                                <div class="form-group input-group">
                                                    <span class="input-group-addon"><i class="fa fa-inr fa-fw"></i></span>
                                                    @Html.TextBoxFor(x => x.Activity_BSR_Material_Cost, new { @class = "form-control", @placeholder = "Enter BSR Material Cost", @maxlength = 15, @id = "Activity_BSR_Material_Cost" })
                                                    <div id="errordivMCost" style="display: none; position: static; right: 0px; padding-left: 24px;" class="alert-danger1"></div>
                                                </div>
                                            </div>

                                           
                                            @*<div id="divBsrType" class="col-lg-6">
                                                    <div class="form-group">
                                                        <label>BSR Type: <span class="mandatory">*</span></label>
                                                        @Html.DropDownList("BSR_Type", (IEnumerable<SelectListItem>)ViewBag.BSR_Type, new { @class = "form-control", id = "BSR_Type" })
                                                        <div id="errordivBsrType" style="display:none" class="alert-danger1"></div>
                                                    </div>
                                                </div>*@

                                            <div id="divPerUnit" class="col-lg-6">
                                                <label>BSR Labour Cost: <span class="mandatory">*</span></label>
                                                <div class="form-group input-group">
                                                    <span class="input-group-addon"><i class="fa fa-inr fa-fw"></i></span>
                                                    @Html.TextBoxFor(x => x.Activity_BSR_Labour_Cost, new { @class = "form-control", @placeholder = "Enter BSR Labour Cost", @maxlength = 15, @id = "Activity_BSR_Labour_Cost" })
                                                    <div id="errordivLCost" style="display: none; position: static; right: 0px; padding-left: 24px;" class="alert-danger1"></div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12"></div>
                                            <div class="col-lg-6">
                                                <label>Ceiling Cost: <span class="mandatory">*</span></label>
                                                <div class="form-group input-group">
                                                    <span class="input-group-addon"><i class="fa fa-inr fa-fw"></i></span>
                                                    @Html.TextBoxFor(x => x.Activity_TotalCost, new { @class = "form-control", @placeholder = "Ceiling Cost", @maxlength = 15, @id = "Activity_TotalCost" })
                                                    <input type="hidden" id="hdTotalCost" />
                                                    <div id="errordivSTC" style="display: none; position: static; right: 0px; padding-left: 24px; " class="alert-danger1"></div>
                                                </div>
                                            </div>


                                            <div class="col-lg-12"></div>


                                            <div class="col-lg-12" style="padding-left:0px; display:none">
                                                <label>Duration:<span class="mandatory">*</span></label>
                                                <div id="errordivDuration" style="display:none" class="alert-danger1"></div>
                                                <div class="divider"></div>
                                            </div>
                                            <div class="col-lg-6 un-bold" style="display:none">
                                                <div class="form-group">
                                                    <label>From:</label>

                                                    <div id="datepicker" class="input-group date input-width" data-date-format="dd-mm-yyyy">
                                                        @Html.TextBoxFor(x => x.Activity_StartDate, new { @class = "form-control datefield", @id = "txt_Dfrom" })
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <div id="errordivFdate" style="display:none" class="alert-danger1"></div>
                                                    </div>



                                                </div>
                                            </div>
                                            <div class="col-lg-6 un-bold" style="display:none">
                                                <div class="form-group">
                                                    <label>To:</label>
                                                    <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
                                                        @Html.TextBoxFor(x => x.Activity_EndDate, new { @class = "form-control datefield", @id = "txt_Dto" })
