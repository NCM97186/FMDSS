                                                    <label>Activity Unit: <span class="mandatory">*</span></label>
                                                    @Html.DropDownList("Sub_Activity_Unit", (IEnumerable<SelectListItem>)ViewBag.Sub_Activity_Unit, "--Select--", new { @class = "form-control common", id = "Sub_Activity_Unit" })
