    <input type="hidden" id="researchType" name="RsearchType" value="Visit Services in Wildlife" />
    <div id="page-wrapper-inn">
        <div class="col-lg-12 pad">
            @if (@ViewData["VisitType"] != null)
            {
                <h1 class="page-header"> @ViewData["VisitType"]</h1>
            }
            @if (@TempData["ET_Status"] != null)
            {
                <div class="alert alert-success"><i class="fa fa-thumbs-o-up fa-fw"></i>@TempData["ET_Status"]</div>
            }
        </div>
        <!-- /.col-lg-12 -->
        <!-- Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!--<div class="panel-heading"></div>
                    <!-- /.panel-heading -->

                    <div class="panel-body">

                        <div class="col-lg-12">
                            <label>Institute Detail</label>
                            <div class="divider"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Name:<span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="collegeName" name="CollegeName" maxlength="25" />

                            </div>
                            <div id="errorCndiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Address:<span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="collegeAddress" name="CollegeAddress" maxlength="100" />

                            </div>
                            <div id="errorCadiv1" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Phone Number:<span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="phoneNumber" name="Phonenumber" maxlength="10" />

                            </div>
                            <div id="errorCpdiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-12">
                            <label>Head of Institute Detail</label>
                            <div class="divider"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Name: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="txt_principleName" name="Princeple_Name" title="Enter the name of the Name of the Head of Institute" maxlength="25" />
                                <span id="errorName" style="color: Red; display: none" class="alert-danger1">* Please Enter Name</span>
                            </div>
                            <div id="errorPnamediv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Phone Number: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="txt_memberAddress" name="P_Address" title="Enter the Phone Number of the Name of the Head of Institute" maxlength="10" />
                                <span id="errorName" style="color: Red; display: none" class="alert-danger1">* Please Enter Name</span>
                            </div>
                            <div id="errorMemAddiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6" style="display:none">
                            <div class="form-group">
                                <label>ID Type: <span class="mandatory">*</span></label>
                                <select class="form-control" name="P_MemberID" id="ddl_IDType">
                                    <option value="0">Select</option>
                                    <option value="1">Passport</option>
                                    <option value="2">Aadhar</option>
                                    <option value="3">Driving Licence</option>
                                    <option value="4">Voter ID</option>
                                    <option value="5">PAN Card</option>
                                </select>

                            </div>
                            <div id="errorIdTypediv" style="display:none" class="alert-danger1"></div>
                        </div>

                        <div class="col-lg-6" style="display:none">
                            <div class="form-group">
                                <label>ID proof No: <span class="mandatory">*Please carry original photo ID at the time of Entry</span></label>
                                <input type="text" class="form-control" id="txt_IDno" name="P_MemberIDProof" title="Enter the ID proof number of the selected ID" />
                                <span id="errorIDNo" style="color: Red; display: none" class="alert-danger1">* Please Enter ID No.</span>
                            </div>
                            <div id="errorIDnodiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-12">
                            <label>Place Detail</label>
                            <div class="divider"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Place Category: <span class="mandatory">*</span></label>
                                @Html.DropDownList("Category", (IEnumerable<SelectListItem>)ViewBag.Category, new { @class = "form-control common", id = "ddl_Category" })
                            </div>
                            <div id="errorCatdiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6" id="divDist" style="display:none;">
                            <div class="form-group">

                                <label>District: <span class="mandatory">*</span></label>

                                @Html.DropDownList("ddlistrict", new SelectList(string.Empty, "Value", "Text"), new { @class = "form-control", id = "district" })
                                <input type="hidden" id="disName" name="DisName">
                            </div>
                            <div id="errordiv8" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Place: <span class="mandatory">*</span></label>
                                @Html.DropDownList("Location", new SelectList(string.Empty, "Value", "Text"), new { @class = "form-control", id = "locationId" })
                                <input type="hidden" id="locName" name="LocName">
                            </div>
                            <div id="errorLodiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Duration of Tour:</label>
                                <label>From: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control datefield" id="durationfrom" name="Durationfrom" />
                            </div>
                            <div id="errorDurdiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>To: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control datefield" id="durationto" name="Durationto" />
                            </div>
                            <div id="errorDtodiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Number of Members: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="txt_memberNumber" name="P_NumberOfMember" title="Enter the name of the visitor" maxlength="3" />
                                <span id="errorName" style="color: Red; display: none" class="alert-danger1">* Please Enter Name</span>
                            </div>
                            <div id="errorMemNudiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>List of members:<span class="mandatory">*</span> <span> (Only.pdf)</span></label>
                                <input type="file" class="form-control" id="txtUploadmember" name="MemberListFilename" onchange="ValidateSingleInput(this);" />

                                <div id="errordivUpload" style="display:none" class="alert-danger1"></div>
                            </div>
                            <div id="errorUploadMediv" style="display:none" class="alert-danger1"></div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Document for Educational Tour Request:<span class="mandatory">*</span></label>
                                <input type="file" class="form-control" id="txtUploadeducation" name="DocEducationalToueReq" onchange="ValidateSingleInput(this);" />
                                <label><span class="spanmark">* Only .txt/ .doc/ .docx/ .pdf file formats are allowed with max size: 2Mb.</span></label>
                                <div id="errordivUpload" style="display:none" class="alert-danger1"></div>
                            </div>
                            <div id="errorUploadEdudiv" style="display:none" class="alert-danger1"></div>

                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <br />
                                <span> </span>
                                <label><span class="mandatory">* Note:- Document should be printed on college letter head with signature and stamp of Head of the Institute .</span></label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label>Vehicle details</label>
                            <div class="divider"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Select Vehicle Type:</label>
                                @Html.DropDownList("Vehiclecat", (IEnumerable<SelectListItem>)ViewBag.PriorityID, "--Select--", new { @class = "form-control", id = "ddl_Vehiclecat" })
                                <input type="hidden" id="vehiclecatId" name="VehiclecatName">
                            </div>
                            <div id="errorVehdiv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6 un-bold">
                            <div class="form-group">
                                <label>Select Vehicle: </label>
                                @Html.DropDownList("ddl_vehicle", new SelectList(string.Empty, "Value", "Text"), "--Select--", new { @class = "form-control" })
                                <input type="hidden" id="vehicleId" name="VehicleName" />
                            </div>
                            <div id="errorVediv" style="display:none" class="alert-danger1"></div>
                        </div>
                        <div class="col-lg-6" style="display:none;">
                            <div class="form-group un-bold">
                                <label>Total vehicle / Equipment: <span class="mandatory">*</span></label>
                                <input type="text" class="form-control" id="txt_Totalvehicle" name="TotalVehicle" title="Enter the total number of vehicles required" />
                            </div>
                        </div>
                        <div class="col-lg-6" style="display:none;">
                            <div class="form-group" id="btn-cont1">
                                <label> &nbsp;</label>
                                <button type="button" class="btn btn-success" id="btn_addvehicle">
                                    Add
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-6" style="display:none;">
                            <table id="temp1" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        @*<th>Id</th>*@
                                        <th>Category</th>
                                        <th>Vehicle / Eqpt.</th>
                                        <th>No. of vehicle</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="VehicleTable"></tbody>
                            </table>
                        </div>

                        <div class="col-lg-12"></div>

                        <!-- Btn Groping -->
                        <div class="btn-padd">
                            <div id="btn" class="col-lg-12">
                                <button type="submit" class="btn btn-success" name="command" value="Proceed" id="btnproced">
                                    <i class="fa fa-check"></i> Submit
                                </button>
                                <button type="reset" class="btn btn-warning" id="btnReset">
                                    <i class="fa fa-circle-o-notch fa-fw"></i> Reset
                                </button>
                                <button type="button" name="command" value="Cancel" class="btn btn-danger" onclick="reload(); return false;">
                                    <i class="fa fa-times fa-fw"></i> Cancel
                                </button>
                            </div>
                        </div>
                        <!-- /.Btn Groping -->

                    </div>
                    <!-- /.panel-body -->

                </div>
                <!-- /.panel -->

            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>



}
