@{
    ViewBag.Title = "Place List";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString());
}

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Ticket Booking</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @if (ViewBag.PlaceList != null)
            {
                foreach (var item in ViewBag.PlaceList)
                {
                    <div class="col-lg-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">@item.PlaceName</div>
                            <div class="panel-body">
                                <div class="centr">
                                    <a href="@Url.Content("~/onlinebooking/" + item.URL)" class="btn btn-primary">Book Ticket</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            { 
                <p>You do not have authentication to do the bookings.</p>
            }
        </div>
    </div>
</div>


<a href="@Url.Content("~/onlinebooking/jhalana-leopard-conservation-reserve")">Jhalana Booking</a>
