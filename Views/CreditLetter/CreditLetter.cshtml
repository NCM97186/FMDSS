@model FMDSS.Models.FinanceManagement.LCGenration
@{
    ViewBag.Title = "CreditLetter";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); //  "~/Views/Shared/Forestlayout.cshtml";
}
<!-- Form design -->

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Letter of Credit</h1>
    </div>
    <!-- /.col-lg-12 -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">


                    <!--Add New Btn-->
                    <div class="col-lg-3 pull-right">
                        <button type="button" class="btn btn-success AddNewAsset" name="" value="" title="Add New" style="margin-bottom:10px">
                            <i class="fa fa-plus"></i> Add New
                        </button>
                    </div>
                    <!--./Add New Btn-->
                    <!--Table-->
                    <div id="tbl" class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">

                            <thead>
                                <tr>
                                    <th style="width:6%;">S. No</th>
                                    <th>Office</th>
                                    <th>Bank Name</th>
                                    <th>Head No</th>
                                    <th>Budget Type</th>
                                    <th style="width:6%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewData["LCdataList"] as IEnumerable<FMDSS.Models.FinanceManagement.LCGenration>)
                                {
                                    <tr>
                                        <td class="reqid" data-toggle="modal" data-target="#myModalDashboard" style="cursor:pointer">
                                            @Html.DisplayFor(model => item.Index)
                                        </td>
                                        <td class="reqid" data-toggle="modal" data-target="#myModalDashboard" style="cursor:pointer">
                                            @Html.DisplayFor(model => item.OfficeName)
                                        </td>
                                        <td class="reqid" data-toggle="modal" data-target="#myModalDashboard" style="cursor:pointer">
                                            @Html.DisplayFor(model => item.BankBranch_Name)
                                        </td>
                                        <td class="reqid" data-toggle="modal" data-target="#myModalDashboard" style="cursor:pointer">
                                            @Html.DisplayFor(model => item.Budget_HeadNumber)
