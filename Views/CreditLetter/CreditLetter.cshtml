<script type="text/javascript" src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>

<script>
    var RootUrl = '@Url.Content("~/")';
    $('.AddNewAsset').on('click', function () {
        $("#NewAssetForm").show();
        $('html, body').animate({ scrollTop: $("#NewAssetForm").offset().top - 120 }, 'slow');
    });
    $(document).ready(function () {
        $(".datefield").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'MM yy',

            onClose: function () {
                var iMonth = $("#ui-datepicker-div .ui-datepicker-month :selected").val();
                var iYear = $("#ui-datepicker-div .ui-datepicker-year :selected").val();
                $(this).datepicker('setDate', new Date(iYear, iMonth, 1));
            },

            beforeShow: function () {
                if ((selDate = $(this).val()).length > 0) {
                    iYear = selDate.substring(selDate.length - 4, selDate.length);
                    iMonth = jQuery.inArray(selDate.substring(0, selDate.length - 5),
                             $(this).datepicker('option', 'monthNames'));
                    $(this).datepicker('option', 'defaultDate', new Date(iYear, iMonth, 1));
                    $(this).datepicker('setDate', new Date(iYear, iMonth, 1));
                }
            }
        });


        $('[id^=btnView_]').click(function () {
            var ID = { ID: $(this).val() };


            $.ajax({
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(ID),
                url: RootUrl + "CreditLetter/ViewLOC",
                success: function (data) {


                    $("#OName").val('');
                    $("#OIDNumber").val('');
                    $("#OTOffice").val('');
                    $("#OTOCode").val('');
                    $("#BankName").val('');
                    $("#IFSCCode").val('');
                    $("#BHeadNo").val('');
                    $("#BudgetType").val('');
                    $("#ApprovedAmount").val('');
                    $("#RequestAmount").val('');
                    $("#AssignedAmount").val('');
                    $("#RBudgetAmount").val('');
                    $("#COfcPast").val('');
                    $("#RCreditAmount").val('');
                    $("#TotalSpentAmount").val('');

                    $("#OName").html(data.OfficeName);
                    $("#OIDNumber").html(data.OfficeIDNumber);
                    $("#OTOffice").html(data.TOfficeName);
                    $("#OTOCode").html(data.TOfficeCode);
                    $("#BankName").html(data.BankBranch_Name);
                    $("#IFSCCode").html(data.IFSC_Code);
                    $("#BHeadNo").html(data.Budget_HeadNumber);
                    $("#BudgetType").html(data.BudgetTypeID);
                    $("#ApprovedAmount").html(data.Approved_BudgetAmount);
                    $("#RequestAmount").html(data.Requested_BudgetAmount);
                    $("#AssignedAmount").html(data.Assigned_BudgetAmount);
                    $("#RBudgetAmount").html(data.RemainingBudget_Amount);
                    $("#COfcPast").html(data.Past_Credit_Amount);
                    $("#RCreditAmount").html(data.Remaining_Credit_Amount);
                    $("#TotalSpentAmount").html(data.Offices_SpentAmount);
                }
            });
        })
        $(".datefield").keypress(function (event) { event.preventDefault(); });
    });

    $(document).on('click', '#btn_submit1', function () {

        if ($('#TOfficeName').val() == '') {
            $('#errordivTOName').show();
            $('#errordivTOName').html("Please enter the Name Of Treasury office!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#TOfficeName').focus();
            return false;
        }
        else { $('#errordivTOName').hide(); }
        if ($('#txt_TOfficeCode').val() == '') {
            $('#errordivTOCodeNo').show();
            $('#errordivTOCodeNo').html("Please enter the Treasury office code number!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_TOfficeCode').focus();
            return false;
        }
        else { $('#errordivTOCodeNo').hide(); }
        if ($('#txt_BankBranch_Name').val() == '') {
            $('#errordivBankBranchName').show();
            $('#errordivBankBranchName').html("Please enter the Name Of Bank Branch!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_BankBranch_Name').focus();
            return false;
        }
        else { $('#errordivBankBranchName').hide(); }
        if ($('#txt_IFSC_Code').val() == '') {
            $('#errordivIFSC_Code').show();
            $('#errordivIFSC_Code').html("Please enter the Bank Branch's IFSC Code!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_IFSC_Code').focus();
            return false;
        }
        else { $('#errordivIFSC_Code').hide(); }

        if ($('#ddl_Budget_HeadNumber').val() == '' || $('#ddl_Budget_HeadNumber').val() == null || $('#ddl_Budget_HeadNumber').val() == '0') {
            $('#errordivBudgetHeadNumber').show();
            $('#errordivBudgetHeadNumber').html("Please fill the Full Budget Head No.!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#ddl_Budget_HeadNumber').focus();
            return false;
        }
        else { $('#errordivBudgetHeadNumber').hide(); }
        if ($('#ddl_BudgetTypeID').val() == '' || $('#ddl_BudgetTypeID').val() == null || $('#ddl_BudgetTypeID').val() == '0') {
            $('#errordivBudgetTypeID').show();
            $('#errordivBudgetTypeID').html("Please fill the Type Of Budget!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#ddl_BudgetTypeID').focus();
            return false;
        }
        else { $('#errordivBudgetTypeID').hide(); }

        if ($('#txt_Month_Year').val() == '') {
            $('#errordivMonthYear').show();
            $('#errordivMonthYear').html("Please Select the Month and Year!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_Month_Year').focus();
            return false;
        }
        else { $('#errordivMonthYear').hide(); }
        if ($('#txt_Requested_BudgetAmount').val() == '') {
            $('#errordivRequestedBudgetAmount').show();
            $('#errordivRequestedBudgetAmount').html("Please enter the Requested Amount!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_Requested_BudgetAmount').focus();
            return false;
        }
        else { $('#errordivRequestedBudgetAmount').hide(); }
        if ((($('#txt_Requested_BudgetAmount').val().substr(0, 1) == '.') && ($('#txt_Requested_BudgetAmount').val().length <= 1)) || ($('#txt_Requested_BudgetAmount').val().substr(0, 1) == '.')) {
            $('#errordivRequestedBudgetAmount').show();
            $('#errordivRequestedBudgetAmount').html("Please enter the valid Requested Amount!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_Requested_BudgetAmount').focus();
            return false;
        }
        else { $('#errordivRequestedBudgetAmount').hide(); }

        if ((parseFloat($('#txt_Requested_BudgetAmount').val())) <= 0) {
            $('#errordivRequestedBudgetAmount').show();
            $('#errordivRequestedBudgetAmount').html("Please enter the valid Requested Amount!" + "<i class='fa fa-times fa-fw' style='float: right;padding: 2px;'></i>");
            $('#txt_Requested_BudgetAmount').focus();
            return false;
        }
        else { $('#errordivRequestedBudgetAmount').hide(); }
    })

    $(document).on('keypress', '#txt_TOfficeCode,#TOfficeName', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9 ]+$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
            event.preventDefault();
            return false;
        }
    });
    $(document).on('keypress', '#txt_IFSC_Code', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9]+$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
            event.preventDefault();
            return false;
        }
    });
    $(document).on('keypress', '#txt_BankBranch_Name', function (event) {
        var regex = new RegExp("^[a-zA-Z0-9|/|& ]+$");
        var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
        if (!regex.test(key)) {
            event.preventDefault();
            return false;
