@model FMDSS.Models.CitizenService.PermissionServices.NocData
<fieldset id="fieldLocation" class="corner" style="margin: 10px; min-height: 300px; width:99%; border: 1px Solid #ccc;">
    <label style="font-weight:normal; padding:10px">
    </label>
    <div class="col-lg-12">
        <label>Location Details:</label>
        <div class="divider"></div>
    </div>
    <div class="table-responsive request-id">
        <table id="tbldistmapping" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Division</th>
                    <th>District</th>
                    <th>Tehsil</th>
                    <th>Panchayat Samiti</th>
                    <th>Gram Panchayat</th>
                    <th>Village</th>
                    <th>Name of Area</th>
                    <th>Khasra No.<span class="mandatory">*</span></th>
                </tr>
            </thead>
            <tbody id="tbodydistmap">
                @for (int i = 0; i < Model.gislist.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Div_NM)
                            @Html.HiddenFor(x => x.gislist[i].Div_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Dist_NM)
                            @Html.HiddenFor(x => x.gislist[i].Dist_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Tehsil_NM)
                            @Html.HiddenFor(x => x.gislist[i].Tehsil_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Block_NM)
                            @Html.HiddenFor(x => x.gislist[i].Blk_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Gp_NM)
                            @Html.HiddenFor(x => x.gislist[i].Gp_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].Village_NM)
                            @Html.HiddenFor(x => x.gislist[i].Vlg_Cd)
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.gislist[i].areaName)
                        </td>
                        <td>
                            @Html.TextAreaFor(x => x.gislist[i].KhasraNo, new { @class = "form-control common kno", @title = "Enter the Khasra number(s) of the area. Each Khasra number length should not greater than 8.E.G. 7/12,12345678", @placeholder = "Enter Khasra No. comma separated", @id = "khasra_no", @maxlength = 500 })
                            @Html.HiddenFor(x => x.gislist[i].FOREST_DIVCODE)
                        </td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</fieldset>