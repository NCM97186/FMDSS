@model IEnumerable<FMDSS.Models.ForesterDevelopment.BudgetAllocation.ViewModel.View_BudgetHead_Allocation>
@{
    ViewBag.Title = "BudgetAllocationList";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString());
}


<div id="page-wrapper-inn">
    @Html.Partial("_PartialBudgetLink")
    <div class="col-lg-12 pad">
        <div class="col-lg-10">
            <h1 class="page-header">Budget Allocation Master List (@Session["User"].ToString())</h1>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-success confirm-toggle" name="Command" value="0" id="AddMaster">
                <i class="fa fa-check"></i> Show Master
            </button>
        </div>
    </div>



    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!--Search-->
                    <!--./Search-->
                    <!--Add New Btn-->
                    <div class="col-lg-3 pull-right">
                        <button id="btnAddScheme" type="button" style="width: auto; margin: 0 0 10px" class="btn btn-info AddNewScheme pull-right" name="" value="" title="Add Budget Allocation Master">
                            <i class="fa fa-plus"></i>@Html.ActionLink("Add Budget Allocation Master", "BudgetAllocationToBudgetHead", "BudgetAllocationtoSubBudgetHead")
                        </button>
                    </div>
                    <!--./Add New Btn-->
                    <!--Table-->

                    <div class="table-responsive request-id">
                        <table class="table table-striped table-bordered table-hover gridtable">

                            <thead>
                                <tr>
                                    <th style="width:10%;">S. No</th>
                                    <th>Budget Name</th>
                                    <th>Scheme Name</th>
                                    <th>Activity Name</th>
                                    <th>Sub Activity Name</th>
                                    <th>Allocated Amount</th>
                                    @*<th style="width:9%;">Action</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="reqid" data-toggle="modal" data-target="#myModalDashboard" style="cursor:pointer">
                                        <td>@Html.DisplayFor(model => item.rowid)</td>
                                        <td class="name">
                                            @Html.DisplayFor(model => item.BudgetHeadName)
                                        </td>
                                        <td class="name">
                                            @Html.DisplayFor(model => item.SchemeName)
                                        </td>
                                        <td class="name">
                                            @Html.DisplayFor(model => item.ActivityName)
                                        </td>
                                        <td class="name">
                                            @Html.DisplayFor(model => item.SubActivityName)
                                        </td>
                                        <td class="name">
                                            @Html.DisplayFor(model => item.AllocatedAmount)
                                        </td>

                                        @*<td>
                                                <button type="button" class="btn btn-success btn-circle" title="View" data-toggle="modal" data-target="#NewSchemeForm" >
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                            </td>*@

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <!-- /.panel-body -->



            </div>
            <!-- /.panel -->

        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>

    $(function () {

        $('.gridtable').DataTable({
            responsive: true,
            "bSort": false
        });


    });
</script>