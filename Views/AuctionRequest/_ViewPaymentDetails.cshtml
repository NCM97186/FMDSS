@model List<FMDSS.Entity.DOD.ViewModel.AuctionPaymentDetails>
@{
    var headerTitle = "Payment Details"; 
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel"><label id="lbpl_header">@headerTitle</label></h4>
        </div>

        <div class="modal-body">
            <!-- From URL Get --> 
            <table id="tblTPProductDetails" class="table table-striped table-bordered table-hover notranslate">
                <thead>
                    <tr style="color:#999; background-color:#ddd;">
                        <td colspan="11"><i>Payment Details</i></td>
                    </tr>
                    <tr>
                        <th>Paid Amount</th>
                        <th>Emitra Amount</th>
                        <th>Total Paid Amount</th>
                        <th>Payment Status</th>
                        <th>Payment Mode</th>
                        <th>Emitra Transaction ID</th>
                        <th>Bank Name</th>
                        <th>IFSC Code</th>
                        <th>Cheque Number</th>
                        <th>Cheque Date</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody id="tbPaymentDetails" class="tbviewdet">

                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PaidAmount</td>
                                <td>@item.EmitraAmount</td>
                                <td>@item.TotalPaidAmount</td>
                                <td>@item.PaymentStatus</td>
                                <td>@item.PaymentMode</td>
                                <td>@item.EmitraTransactionID</td>
                                <td>@item.BankName</td>
                                <td>@item.IFSCCode</td>
                                <td>@item.ChequeNumber</td>
                                <td>@item.ChequeDate</td>
                                <td>@item.Comment</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="rowSkip">
                            <td colspan="11">No record found.</td>
                        </tr>
                    }
                </tbody>
            </table>
             
            <!-- /. From URL Get -->
        </div>
        <!-- /.modal-body -->
        <div class="modal-footer" id="fot-f"> 
            <button name="button" class="btn btn-danger" type="button" value="Cancel" data-dismiss="modal" style="width: auto">
                <i class="fa fa-times fa-fw"></i> Close
            </button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<style>
    .modal-content{
        min-width:850px;
    }
</style>


