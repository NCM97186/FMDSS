                            //    $('.OptionalCovid').hide();
                            //}
                            //else {
                            //    $('.OptionalCovid').show();
                            //}
                            //if (tableCount => data && data > 0) {
                            //    $('.Submit_block').show();

                            //}
                           
                        }
                        else {
                            alert('Ticket not avaliable');
                            return false;
                        }
                       
                    }
                })
           

        });
    });

    function Reset() {
        $(".chb").prop('checked', false);
        $('#Remark').val('');
    }
</script>
