@model FMDSS.Controllers.ForesterAction.viewdetail

@Html.HiddenFor(m=>m.Notice_Id,new { id= "aucNoticeId" })
<input type="hidden" id="aucNoticeId" />
<tr><td>Module Name</td><td>@Model.ModuleName</td></tr>
<tr><td>Request Name</td><td>@Model.PermissionName</td></tr>
<tr><td>RequestId</td><td>@Model.RequestId</td></tr>
<tr><td>Requested On</td><td>@Model.RequestedOn</td></tr>
<tr><td>Requested By</td><td>@Model.RequestedBy</td></tr>
<tr><td>Notice Number</td><td><a href="#" id="viewNotice" title="Please Click on link for View Notice">@Model.Notice_No</a></td></tr>
<tr><td>Region Name</td><td>@Model.Region_Name</td></tr>
<tr><td>Circle Name</td><td>@Model.Circle_Name</td></tr>
<tr><td>Division Name</td><td>@Model.Division_Name</td></tr>
<tr><td>Range Name</td><td>@Model.Range_Name</td></tr>
<tr><td>Place/Depot Name</td><td>@Model.Depot_Name</td></tr>  
<tr><td>Status</td><td>@Model.StatusDesc</td></tr>
<tr><td>Reason</td><td>@Model.Reason_Desc</td></tr>
<tr><td>Remarks</td><td>@Model.Remarks</td></tr> 
<tr>
    <td colspan="2">
       @if (Model.DODProductList != null && Model.DODProductList.Count > 0)
       {
        <div class="col-lg-12">
            <label>Product Details:</label>
            <div class="form-group">
                <table id="tblTPProductDetails" class="table table-striped table-bordered table-hover notranslate">
                    <thead>
                        <tr style="color:#999; background-color:#ddd;">
                            <td colspan="5"><i>Product Details</i></td>
                        </tr>
                        <tr>
                            <th>Lot Number</th>
                            <th>Product Type</th>
                            <th>Product</th>
                            <th>Unit Name</th>
                            <th width="10%">Notice Qty</th>
                        </tr>
                    </thead>
                    <tbody id="tbTPProductDetails" class="tbviewdet"> 
                        @for (int i = 0; i < Model.DODProductList.Count; i++)
                        {
                        <tr>
                            <td>@Model.DODProductList[i].DisplayLotNumber</td>
                            <td>@Model.DODProductList[i].ProductType</td>
                            <td>@Model.DODProductList[i].ProductName</td>
                            <td>@Model.DODProductList[i].UnitName</td>
                            <td>@Model.DODProductList[i].Qty</td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div> 
       }
    </td>
</tr>
