        var html = CKEDITOR.instances['DocumentTemplate'].getData();
        var reqid = $('#ReqId').val();
        if (html != '') {
            $.ajax({
                type: 'POST',
                url: origin + '/ForesterAction/CreateDocument',
                dataType: 'html',
