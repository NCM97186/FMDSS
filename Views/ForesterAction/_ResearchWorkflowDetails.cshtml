        $.ajax({
            type: 'GET',
            url: origin + '/ForesterAction/GetDocumentTemplate',
            dataType: 'html',
            data: { Type:type },
            success: function (result) {
                var d = JSON.parse(result);
                if (d.status_code == "200") {
