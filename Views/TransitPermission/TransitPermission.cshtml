                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Vehicle: <span class="mandatory">*</span></label>
                                @Html.DropDownList("Vehicle", new SelectList(string.Empty, "Value", "Text"), new { @class = "form-control", id = "ddl_Vehicle" })
