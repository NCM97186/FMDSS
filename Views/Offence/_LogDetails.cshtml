@model FMDSS.Entity.Protection.ViewModel.OffenceDetailsWithLog
@{
    var offenceRequest = Model.ViewOffenceDetails;
    var approvalRemarkModel= new FMDSS.Entity.Protection.ViewModel.ApproverRemarks();
    approvalRemarkModel.RequestID = offenceRequest.OffenceDetailsID;
    approvalRemarkModel.StatusID = offenceRequest.StatusID;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button id="btnClose" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel" style="text-align:center">
                Offence Details
            </h4>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" style="font-size:14px;font-weight:700;">
                Log Details
            </div>
            <div class="panel-body">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Offender Name:</label>
                        @offenceRequest.OffenderName
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>FIR Number:</label>
                        @offenceRequest.FIRNumber
                    </div>
                </div> 
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Offender Address:</label>
                        @offenceRequest.OffenderAddress
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Investigator Officer:</label>
                        @offenceRequest.InvestigatorOfficer
                    </div>
                </div> 
                <div class="col-lg-6"> 
                    <div class="form-group">
                        <label>Remarks:</label>
                        @offenceRequest.SpecialRemarks
                    </div>
                </div> 
            </div>
        </div>
        <div id="divPrint" class="modal-body tbl-scroll">
            <!-- From URL Get -->
            <table class="table table-striped table-bordered table-hover notranslate">
                <thead>
                    <tr>
                        <th>SNo</th> 
                        <th>Action</th>
                        <th>Action By</th>
                        <th>Remarks</th>
                        <th>Action Date</th> 
                    </tr>
                </thead>
                <tbody id="tblViewDetails" class="tbviewdet"> 
                    @if (Model != null && Model.OffenceLogList.Count>0)
                    {
                        foreach (var item in Model.OffenceLogList)
                        {
                            <tr>
                                <td>@item.SNo</td>
                                <td>@item.ActionName</td>
                                <td>@item.ActionBy</td>
                                <td>@item.Remarks</td>
                                <td>@item.ActionDate</td> 
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="rowSkip">
                            <td colspan="5">No record found.</td>
                        </tr>
                    }
                </tbody>

            </table>

            <!-- /. From URL Get -->
        </div> 
        @Html.Partial("_UpdateOffence", approvalRemarkModel)
    </div>

    <!-- /.modal-content -->
</div>

<style>
    #divPrint {
        max-height: 350px !important;
    }
</style>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script> 