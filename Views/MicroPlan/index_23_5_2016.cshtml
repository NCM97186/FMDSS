@model IEnumerable<FMDSS.Models.ForestDevelopment.MicroPlan>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Forestlayout.cshtml";
}
<script type="text/javascript" src="~/js/jquery.min.js"></script>


<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Micro Plan</h1>
    </div>
    <!-- /.col-lg-12 -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--<div class="panel-heading">Processing Fees</div>-->
                <!-- /.panel-heading -->
                @{ using (Html.BeginForm())
 {
    <div class="panel-body" id="content">
        <div class="col-lg-3 pull-right">
            <button type="button" class="btn btn-success btn_pp pull-right" name="btn_addpopip" value="" title="Add New Micro Plan" onclick="location.href='@Url.Action("MicroPlan", "MicroPlan")'">
                <i class=" fa fa-plus">
                </i> Add New Micro Plan
            </button>@*<button id="cmd">generate PDF</button>*@
        </div>
        <div class="dataTable_wrapper">
            <div id="tbl" class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-responsive test" id="dataTables-example">

                    <thead>
                        <tr>
                            <th style="width:7%;">S. No</th>
                            <th>District Name</th>
                            <th>Block Name</th>
                            <th>GP Name</th>
                            <th>Village Name</th>
                            <th>Micro Plan Code</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Created On</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.RowID)
                                    @Html.HiddenFor(model => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.DIST_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.BLK_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.GP_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.VILL_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.MicroPlanName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.EnteredOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.StatusDesc)
                                </td>

                                <td>
                                    @*<button type="button" class="btn btn-success btn-circle ViewDepot" title="View" data-toggle="modal" data-target="#myViewDepot">
                                <i class="fa fa-eye"></i>
                            </button>*@
                                    <button type="button" class="btn btn-warning btn-circle EditDepot" data-toggle="modal" data-target="#myModal" title="Edit" onclick="location.href='@Url.Action("MicroPlan", "MicroPlan", new { MPID = Encryption.encrypt(item.ID.ToString())})'">
                                        <i class="fa fa-edit"></i>
                                    </button>

                                    @*<a class="btn btn-danger btn-circle" onclick="return confirm('Are you sure you wish to delete this record?');" href='@Url.Action("Delete", "MicroPlan", new { id = item.ID })'>
                                <i class="fa fa-times"></i>
                            </a>*@
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
 }}
            </div>            
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

    </div>
</div>
<script type="text/javascript">
    if ('@ViewData["Message"]' != '') {
        alert('@ViewData["Message"]');
    }
    var RootUrl = '@Url.Content("~/")';

    $(document).ready(function () {

        $('#dataTables-example').DataTable({
            responsive: true
        });
       
    });   
</script>
