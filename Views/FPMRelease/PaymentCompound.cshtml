@{
    ViewBag.Title = "PaymentCompound";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/Forestlayout.cshtml";
}


<style type="text/css">
    table.imagetable {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #999999;
        border-collapse: collapse;
    }

        table.imagetable th {
            background: #b5cfd2 url('cell-blue.jpg');
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
        }

        table.imagetable td {
            background: #ccc;
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
        }
</style>


<script type="text/javascript" language="javascript">

    $(document).ready(function () {

        function disableBack() { window.history.forward() }

        window.onload = disableBack();
        window.onpageshow = function (evt) {
            if (evt.persisted) disableBack()
        }

    });

</script>

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">
            <!--<i class="fa fa-rupee"></i>--> Payment
            <!-- <small class="pull-right pdate">Date: 17/12/2015</small> -->
        </h1>
    </div>  
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--<div class="panel-heading"></div>
        <!-- /.panel-heading -->
                <div class="panel-body">
                    <section class="payment">
                        <div class="row">
                            <div class="col-xs-12 table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <tr>
                                        <th>Transaction_Id</th>
                                        <th>Total fees</th>
                                        <th>Tax Rate(%)</th>
                                        <th>Discount(%)</th>
                                        <th>Name</th>
                                        <th>Status</th>
                                    </tr>
                                    @foreach (var item in ViewData.Model)
                                      {
                                        <tr style="color:Black">
                                            <td>@item["Transaction_Id"] </td>
                                            <td>@item["TotalFees"]</td>
                                            <td>@item["FineAmount"]</td>
                                            <td>@item["Discount"]</td>
                                            <td>@item["EnterBy"]</td>
                                            <td>@item["Status"]</td>
                                        </tr>
                                      }
                                </table>

                                <div class="row no-print">
                                    <div class="col-xs-12">
                                        <label>Total Amount Payable</label>: @Html.Raw(HttpContext.Current.Session["totalprice"])


                                        @using (Html.BeginForm("Pay", "FPMRelease", FormMethod.Post, new { id = "pay" }))
                                        {
                                            <div style="text-align:center" class="form-horizontal" role="form">
                                                <button id="btnPay" type="submit" name="Command" value="pay" class="btn btn-primary pull-right"><i class="fa fa-check"></i> Pay Now</button>
                                            </div>
                                        }

                                    </div>
                                </div>

                              
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


