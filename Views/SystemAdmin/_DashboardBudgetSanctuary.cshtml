@model IEnumerable<FMDSS.Models.Admin.BudgetSanctuary>

<div class="panel panel-primary">
    <table id="tbl_@ViewBag.ParentID" name="tblBudgetSanctuary" cellpadding="0" cellspacing="0" class="table table-striped table-bordered table-hover table-responsive">
        <thead><tr><th>#</th><th>Sanctuary</th><th>Total Amount</th><th>Allocated Amount</th><th>Count</th></thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SNo</td>
                        <td>@item.Place_Name</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.AllocatedAmount</td>
                        <td>@item.TotalCount</td> 
                    </tr>
                }
            }
        </tbody>
    </table>
</div> 
@Html.Hidden("hdnRootURL", Url.Content("~/"))  
 
