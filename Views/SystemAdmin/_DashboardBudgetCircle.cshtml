@model IEnumerable<FMDSS.Models.Admin.BudgetCircle>
<div class="panel panel-primary">
    <table id="tbl_@ViewBag.ParentID" name="tblDashboard" cellpadding="0" cellspacing="0" class="table table-striped table-bordered table-hover table-responsive">
        <thead><tr><th>#</th><th>Circle</th><th>Total Amount</th><th>Allocated Amount</th><th>Count</th></thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SNo</td>
                        <td>@item.CIRCLE_NAME</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.AllocatedAmount</td>
                        <td><a href="javascript:void(0);" data-toggle="modal" onclick="ShowDashboardBudgetDivision('Budget', '@item.CIRCLE_CODE#@item.FinancialYearID', 'BudgetDivision', this)">@item.TotalCount</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="modal fade in" data-backdrop="static" id="modalAEvidence" tabindex="2" role="dialog" aria-hidden="false"></div>
<script type="text/javascript"> 

    function ShowDashboardBudgetDivision(moduleName, parentID, type, cntrlID) { 
        $.ajax({
            type: 'GET',
            url: RootUrl + 'SystemAdmin/GetDashboardDetails',
            dataType: 'html',
            data: { moduleName: moduleName, parentID: parentID, type: type },
            success: function (data) {  
                $('#modalAEvidence').html(data);
                $('#modalAEvidence').show();
            }
        })
    }
</script>
