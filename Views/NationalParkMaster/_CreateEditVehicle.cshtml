@using FMDSS
@model FMDSS.Models.NationalPark.VehicleModule
<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

@using (Html.BeginForm("CreateEditVehicle", "NationalParkMaster", FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;
            </button>
            <h4 class="modal-title">
                @(Model.Id == 0 ? "Add Vehicle" : "Edit Vehicle")
            </h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(model => model.Id)
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Vehicle Name: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control common", @maxlength = "50" })
                    <div class="alert-danger1">@Html.ValidationMessageFor(model => model.Name)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Seat Alloted: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.SeatAlloted, new { @class = "form-control common", @maxlength = "3" })
                    <div class="alert-danger1">@Html.ValidationMessageFor(model => model.SeatAlloted)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Vehicle Type: </label>
                    @Html.EnumDropDownListFor(model=>model.GovtSpecifiedOrPrivate, Model.GovtSpecifiedOrPrivate,"--Select--", new { @class = "form-control common"})
                    <div class="alert-danger1">@Html.ValidationMessageFor(model => model.GovtSpecifiedOrPrivate)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Fees Applicable: </label>
                    @Html.EnumDropDownListFor(model => model.FeesApplicable, Model.FeesApplicable,"--Select--", new { @class = "form-control common" })
                    <div class="alert-danger1">@Html.ValidationMessageFor(model => model.FeesApplicable)</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Active:</label>
                    @Html.CheckBoxFor(model => model.IsActive)
                </div>
            </div>
        </div>
        <div class="modal-footer" style="clear:both">
            <div id="btn" class="col-lg-12">

                <button type="submit" class="btn btn-success" value="Save" id="btn_submit1">
                    <i class="fa fa-check"></i> Save
                </button>

                <button type="button" id="btn_cancel" name="Command" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                    <i class="fa fa-times fa-fw"></i> Close
                </button>

            </div>

        </div>
    </div>

}