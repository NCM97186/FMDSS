@model List<FMDSS.Entity.ViewModel.CommonDocument> 
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button id="btnClose" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel" style="text-align:center">
                Attached Work Flow Evidence
            </h4>
        </div>
        <div id="divPrint" class="modal-body tbl-scroll">
            <!-- From URL Get -->
            <table class="table table-striped table-bordered table-hover notranslate">
                <thead>
                    <tr>
                        <th>SNo</th>
                        <th>Evidence Type</th>
                        <th>Evidence Name</th>
                        <th>Attached Evidence</th>
                    </tr>
                </thead>
                <tbody id="tblViewDetails" class="tbviewdet">
                    @if (Model != null)
                    {
                        if (Model.Count > 0)
                        {
                            var cntr = 1;
                            foreach (var item in Model)
                            {
                            <tr>
                                <td>@string.Format("{0}", cntr++)</td>
                                <td>@item.DocumentTypeName</td>
                                <td>@item.DocumentName</td>
                                <td><a target="_blank" class="btn" href="@Url.Content("~/" + item.DocumentPath)">View Attachment</a></td> 
                            </tr>
                            }
                        }
                        else
                        {
                            <tr class="rowSkip">
                                <td colspan="6">No record found.</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="rowSkip">
                            <td colspan="6">No record found.</td>
                        </tr>
                    }
                </tbody>

            </table>

            <!-- /. From URL Get -->
        </div>
        <!-- /.modal-body -->
        <div class="modal-footer" id="fot-f">
            <div id="btn" class="col-lg-12">
                <button data-dismiss="modal" name="button" class="btn btn-danger" type="button" value="Cancel" style="width: auto">
                    <i class="fa fa-times fa-fw"></i> Close
                </button>

            </div>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
