                return false;
            }
            else {
                $('#errSsoid').css("display", "none");
            }

            if ($('#Name').val().trim() == "") {
                $("#errName").css("display", "block");
                $('#errName').focus();
                return false;
            }
            else {
                $("#errName").css("display", "none");
            }
            if ($('#EmailId').val().trim() == "") {
                $('#errEmailId').css("display", "block");
                $('#errEmailId').focus();
                return false;
            }
            else {
                $('#errEmailId').css("display", "none");
            }

            if ($('#Mobile').val().trim() == "") {
                $("#errMobile").css("display", "block");
                $('#errMobile').focus();
                return false;
            }
            else {
                $("#errMobile").css("display", "none");
            }


            if ($('option:selected', $('#Designation')).index() == 0) {
                $("#errDesignation").css("display", "block");
                $('#errDesignation').focus();
                return false;
            }
            else {
                $("#errDesignation").css("display", "none");
            }

            if ($('option:selected', $('#Gender')).index() == 0) {
                $("#errGender").css("display", "block");
                $('#errGender').focus();
                return false;
            }
            else {
                $("#errGender").css("display", "none");
            }


            if ($('#Postal_Address1').val().trim() == "") { 
                $("#errPostal_Address1").css("display", "block");
                $('#errPostal_Address1').focus();
                return false;
            }
            else {
                $("#errPostal_Address1").css("display", "none");
            }


            if ($('#Postal_Code1').val().trim() == "") {
                $("#errPostal_Code1").css("display", "block");
                $('#errPostal_Code1').focus();
                return false;
            }
            else {
                $("#errPostal_Code1").css("display", "none");
            }


            if ($('option:selected', $('#IsKioskUser')).index() == 0) {
                $("#errIsKioskUser").css("display", "block");
                $('#errIsKioskUser').focus();
                return false;
            }
            else {
                $("#errIsKioskUser").css("display", "none");
            }

            if ($('option:selected', $('#IsDepartmentalKioskUser')).index() == 0) {
                $("#errIsDepartmentalKioskUser").css("display", "block");
                $('#errIsDepartmentalKioskUser').focus();
                return false;
            }
            else {
                $("#errIsDepartmentalKioskUser").css("display", "none");
            }

            
            
            if ($('option:selected', $('#Isactive')).index() == 0) {
                $("#errIsactive").css("display", "block");
                $('#errIsactive').focus();
                return false;
            }
            else {
                $("#errIsactive").css("display", "none");
            }

            if ($('option:selected', $('#IsKioskUser')).index() == 1 && $('option:selected', $('#IsDepartmentalKioskUser')).index() == 1) {
                $("#errIsKioskUserIsDepartmentalKioskUser").css("display", "block");
                return false;
            }
            else {
                $("#errIsKioskUserIsDepartmentalKioskUser").css("display", "none");
            }

        });

    });


</script>
