@model FMDSS.Models.Encroachment.ViewModel.EncroachmentDetailView
@{
    ViewBag.Title = "Encroachment";
}


<div class="modal-content">

    <div class="modal-header">
        <h4 class="modal-title">KML Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th> Division Name </th>
                    <th>District Name</th>
                    <th> Block Name </th>
                    <th> Lat </th>
                    <th> Long </th>
                    <th> Encroch Area From GIS (hect) </th>
                    <th> Actual Encroached Area(hect) </th>
                    <th> Village </th>
                </tr>
                @if (Model.KMLDetails != null)
                {
                    foreach (var itm in Model.KMLDetails)
                    {

                        <tr>
                            <td>@itm.DIV_NAME </td>
                            <td>@itm.DIST_NAME</td>
                            <td>@itm.BLK_NAME</td>
                            <td>@itm.GPSLat </td>
                            <td>@itm.GPSLong</td>
                            <td>@itm.AreaShapeinHactare</td>
                            <td>@itm.Area </td>
                            <td>@itm.Vill_Name </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" align="center">No data Found</td>
                    </tr>
                }
            </tbody>
        </table>


        @{var path = Model.GISFilePath + ".kml";}
        <h4 class="modal-title">KML Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th> View KML </th>
                </tr>
                <tr>
                    <td>

                        <a id="aViewKMLFile" onclick="ViewKML('@path','Forest','@Session["SSOid"].ToString()');" href="javascript:void(0)"><img src="../images/globe.png" width="30"><span> View KML</span></a>
                    </td>
                </tr>
            </tbody>
        </table>

        <h4 class="modal-title">Encroachment Registration Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th>Division</th>
                    <th>Range</th>
                    <th>LR Act</th>
                    <th>Actual Encroached Area(hect)</th>
                    <th>Date of Encroachment Registration</th>
                    <th>Description</th>
                    <th>Encrocher Type</th>
                    <th>Created By</th>
                </tr>


                <tr>
                    <td>@Model.DIV_NAME </td>
                    <td>@Model.RANGE_NAME</td>
                    <td>@Model.LRACTNO</td>
                    <td>@Model.Area </td>
                    <td>@Model.DOE.ToString("dd/MM/yyyy")</td>
                    <td>@Model.Description</td>
                    <td>@(Model.IsKnown == true ? "Known" : "Unknown")</td>
                    <td>@Model.CreatedBy</td>
                </tr>


            </tbody>
        </table>

        <h4 class="modal-title">Encroachment Members Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th> Encroacher Name </th>
                    <th>Encroacher FatherName</th>
                    <th> Encroacher Address </th>
                    <th> Id </th>
                </tr>
                @if (Model.EncroacherDetails != null)
                {
                    foreach (var itm in Model.EncroacherDetails)
                    {
                        <tr>
                            <td>@itm.Encroacher_Name </td>
                            <td>@itm.Encroacher_FatherName</td>
                            <td>@itm.Encroacher_Address</td>
                            <td>@itm.AadharOrBhamasha </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" align="center">No data Found</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="modal-footer" style="clear:both">
        <div id="btn" class="col-lg-12">

            <button type="button" name="Command" class="btn btn-danger" data-dismiss="modal">
                Close
            </button>
        </div>
    </div>
</div>



<script type="text/javascript" src="~/js/jquery.min.js"></script>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/Common.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
