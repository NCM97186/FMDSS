@using (Html.BeginForm("ADDUpdateZooPlaceWiseHead", "Master", FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;
            </button>
            <h4 class="modal-title">
                @*<label id="lbl_dpt">Add/Edit Place</label>*@
                @ViewBag.OpType
            </h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(model => model.ZooPlaceWiseHeadId)
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Place : <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.PlaceID, (IEnumerable<SelectListItem>)ViewBag.ddlLSTPlaceName, "--Select--", new { @class = "form-control common", id = "PlaceID" })
                    <div id="errPlaceID" style="display:none" class="alert-danger1">Place is Required.</div>
                </div>
            </div> 
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Head Name : <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.HeadId, (IEnumerable<SelectListItem>)ViewBag.ddlZooPlaceWiseHead, "--Select--", new { @class = "form-control common", id = "HeadId" })
                    <div id="errHeadId" style="display:none" class="alert-danger1">Head Name is Required.</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label>Fees Charged On: <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.FeeChargedOn, (IEnumerable<SelectListItem>)ViewBag.FeeChargeonlst, "--Select--", new { @class = "form-control common", id = "FeeChargedOn" })
                    <div id="errFeeChargedOn" style="display:none" class="alert-danger1">Fee Charged On is Required.</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label>Type: <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.Type, (IEnumerable<SelectListItem>)ViewBag.Typelst, "--Select--", new { @class = "form-control common", id = "Type" })
                    <div id="errType" style="display:none" class="alert-danger1">Type is Required.</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label>Parent Fees Charged On: <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.ParentFeeChangeON, (IEnumerable<SelectListItem>)ViewBag.ParentFeeChargeonlst, "--Select--", new { @class = "form-control common", id = "ParentFeeChangeON" })
                    
                </div>
            </div>


           
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Head Amount: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.HeadAmount, new { @class = "form-control common", @maxlength = "8" })
                    <div id="errHeadAmount" style="display:none" class="alert-danger1">Head Amount is Required.</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Active / Deactive : <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.isActive, (IEnumerable<SelectListItem>)ViewBag.ISactivelst, "--Select--", new { @class = "form-control common", id = "IsActive" })
                    <div id="errIsactive" style="display:none" class="alert-danger1">Active / Deactive  is Required.</div>

