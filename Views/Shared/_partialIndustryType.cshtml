
@model FMDSS.Models.Master.IndustryType
<link href="~/css/timepicki.css" rel="stylesheet" />
<script src="~/js/timepicki.js"></script>
<script>
    var $j = jQuery.noConflict();
    $j('.timepicker').timepicki({ timeFormat: 'h:mm p' });

</script>


<script type="text/javascript" src="~/js/jquery.min.js"></script>


<script>
    var RootUrl = '@Url.Content("~/")';

   
      $(document).ready(function () {

    
        $('#btn_submit1').click(function (e) {

           

            if ($('#IName').val().trim() == "") {
                $('#errIName').css("display", "block");
                $('#errIName').focus();
                return false;
            }
            else {
                $('#errIName').css("display", "none");
            }

            if ($('#IndustDefinition').val().trim() == "") {
                $('#errIndustDefinition').css("display", "block");
                $('#errIndustDefinition').focus();
                return false;
            }
            else {
                $('#errIndustDefinition').css("display", "none");
            }




        });

    });


</script>

@using (Html.BeginForm("ADDUpdateIndustryType", "Master", FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;
            </button>
            <h4 class="modal-title">
                @*<label id="lbl_dpt">Add/Edit Place</label>*@
                @ViewBag.OpType
            </h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(model => model.IID)
            
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Industry Name: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.IName, new { @class = "form-control common", @maxlength = "100" })
                    <div id="errIName" style="display:none" class="alert-danger1">Industry Name is Required.</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Industry Definition: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.IndustDefinition, new { @class = "form-control common", @maxlength = "100" })
                    <div id="errIndustDefinition" style="display:none" class="alert-danger1">Industry Definition is Required.</div>
                </div>
            </div>

           

            <div class="col-lg-6">
                <div class="form-group">
                    <label>Active / Deactive : <span class="mandatory">*</span></label>
                    @Html.DropDownListFor(Model => Model.IsActive, (IEnumerable<SelectListItem>)ViewBag.ISactivelst, "--Select--", new { @class = "form-control common", id = "IsActive" })
                    <div id="errIsactive" style="display:none" class="alert-danger1">Active / Deactive  is Required.</div>

                </div>
            </div>
            <!-- /.Btn Groping -->


        </div>
        <div class="modal-footer" style="clear:both">
            <div id="btn" class="col-lg-12">

                <button type="submit" class="btn btn-success" value="Save" id="btn_submit1">
                    <i class="fa fa-check"></i> Save
                </button>

                <button type="button" id="btn_cancel" name="Command" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                    <i class="fa fa-times fa-fw"></i> Close
                </button>

            </div>

        </div>
    </div>

}