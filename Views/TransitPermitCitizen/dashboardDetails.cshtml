<div class="row">

    <div class="col-lg-2">
        Citizen Dashboard
    </div>
    <div class="col-lg-9" style="text-align:right;">
        <a href="@Url.Action("TransitPermitCitizen","TransitPermitCitizen")" class="btn btn-success" style="margin-right: 1%;">
            <i class="fa fa-check"> Apply Permit</i>
        </a>

    </div>
 
    <div class="col-lg-9">

        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive request-id">

                <!--work progress start-->
                <section class="panel">

                    <div class="table-responsive">
                        <table class="table" id="divTable">
                            <thead>
                                <tr>
                                    <th>S.No.</th>
                                    <th>Permit No</th>
                                    <th>Division Office</th>
                                    <th>Range Office</th>
                                    <th>Application Date</th>
                                    <th>Application Status</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.datalist.Rows)
                                {
                                <tr>
                                    <td>@item[0]</td>
                                    <td>@item[1]</td>
                                    <td>@item[3]</td>
                                    <td>@item[5]</td>
                                    <td>@item[6]</td>
                                    <td>@item[7]</td>
                                    <td>

                                        <a href="@Url.Action("TransmitPermitTransationDetails", "TransitPermitCitizen" , new { Id=item[1] })"><i class="fa fa-eye" title="View details" aria-hidden="true"></i></a>
                                        &nbsp;
                                        @if (ViewBag.role != "8")
                                        {
                                        if (item[7] == "Pending")
                                        {
                                        <a href="@Url.Action("TransmitPermitTransation", "TransitPermitCitizen" , new { Id=item[1] })"><i class="fa fa-edit" title="Approved" aria-hidden="true"></i></a>
                                        }

                                        }
                                        else
                                        {
                                        if (item[7] != "Pending" && item[7] != "Rejected")
                                        {
                                        <a href="@Url.Action("PrintTransmitPermit","TransitPermitCitizen", new { Id=item[1] })">Download</a>
                                        }
                                        }

                                    </td>

                                </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </section>
                <!--work progress end-->


            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    </div>
