<script src="~/DashboardCSSJS/js/dashboard/dashboard.js" type="text/javascript"></script>
<script src="~/DashboardCSSJS/js/dashboard/sidebar.js" type="text/javascript"></script>
<!-- Scroll Bar -->
<script src="~/DashboardCSSJS/js/dashboard/jquery.skroller.js"></script>
<!-- Scroll Bar -->

<div class="col-lg-4">
    <div class="box box-info">
        <div class="box-header with-border">
            <i class="fa fa-tree fa-fw"></i> Citizen Tansmit Permit
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive request-id">

                <!--work progress start-->
                <section class="panel">
                    <table class="table table-hover personal-task">
                        <tbody>
                            @if (Convert.ToInt32(@Model.CitizenTransmitpermitPending.ToString()) > 0)
                            {
                                <tr>
                                    <td>Pending Requests</td>

                                    <td><a href="@Url.Action("dashboardDetails", "TransitPermitCitizen", new { listid = 1 })"><span id="DevelopmentPendingRequests" class="badge bg-yellow">@Model.CitizenTransmitpermitPending</span></a></td>

                                </tr>
                                <tr>
                                    <td>Approved Request</td>
                                    <td><a href="@Url.Action("dashboardDetails", "TransitPermitCitizen", new { listid = 2 })"><span id="DevelopmentMyTransactions" class="badge bg-green"> @Model.CitizenTransmitpermitApproved</span></a></td>
                                </tr>
                                <tr>
                                    <td>Reject Request</td>
                                    <td><a href="@Url.Action("dashboardDetails", "TransitPermitCitizen", new {  listid = 3})"><span id="DevelopmentMyAction" class="badge bg-primary">@Model.CitizenTransmitpermitReject </span></a></td>
                                </tr>
                               
                            }
                            else

                            {
                                <tr>
                                    <td>Pending Requests</td>
                                    <td><a href="#"><span id="DevelopmentPendingRequests" class="badge bg-yellow">@Model.CitizenTransmitpermitPending</span></a></td>
                                </tr>
                                <tr>
                                    <td>Approved Request</td>
                                    <td><a href="#"><span id="DevelopmentMyTransactions" class="badge bg-green"> @Model.CitizenTransmitpermitApproved</span></a></td>
                                </tr>
                                <tr>
                                    <td>Reject Request</td>
                                    <td><a href="#"><span id="DevelopmentMyAction" class="badge bg-primary">@Model.CitizenTransmitpermitReject </span></a></td>
                                </tr>
                         
                            }
                        </tbody>
                        </table>
                </section>
                <!--work progress end-->


            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>


