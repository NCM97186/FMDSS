<link href="~/DashboardCSSJS/css/dashboard/dashboard.css" rel="stylesheet" type="text/css">

<!-- Custom Fonts -->
<link href="~/DashboardCSSJS/css/dashboard/font-awesome.min.css" rel="stylesheet" type="text/css">

@*<script src="~/DashboardCSSJS/js/jquery.min.js" type="text/javascript"></script>*@
