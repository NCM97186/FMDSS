@model FMDSS.Models.GVChoice.GV_ChoiceView
@if (Model.NpChoiceList != null)
            {
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Guide/Boat Choice Booking History</strong>
            </div>
            <div class="panel-body">
                <div id="tbl" class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Request Id
                                </th>
                                <th>
                                    Choice RequestId
                                </th>
                                <th>
                                    Transaction Date
                                </th>
                                <th>
                                    Place Name
                                </th>
                                <th>
                                    Zone Name
                                </th>

                                <th>
                                    Shift Name
                                </th>
                                <th>
                                    Guide Name
                                </th>
                                <th>
                                    Vehicle Name
                                </th>
                                <th>
                                    Vehicle/Boat Number
                                </th>
                                <th>
                                    Action Name
                                </th>
                            </tr>
                            @foreach (var item in Model.gvChoiceList)
                            {
                                string strId = item.RequestId + "|" + item.ChoiceRequestId;
                                <tr>
                                    <td>
                                        @item.RequestId
                                    </td>
                                    <td>
                                        @item.ChoiceRequestId
                                    </td>
                                    <td>
                                        @item.TransDate
                                    </td>
                                    <td>
                                        @item.PlaceName
                                    </td>
                                    <td>
                                        @item.ZoneName
                                    </td>
                                    <td>
                                        @item.ShiftName
                                    </td>
                                    <td>
                                        @item.GuideName
                                    </td>
                                    <td>
                                        @item.VehicleName
                                    </td>
                                    <td>
                                        @item.VehicleNumber
                                    </td>
                                    <td>

                                        @Html.ActionLink("Download Receipt", "GetChoiceReceipt", "BookingChoiceGV", new { @strid = FMDSS.Models.MySecurity.SecurityCode.EncodeUrl(@strId) }, new { @target = "_blank" })

                                    </td>
                                </tr>
                            }
                        </thead>
                    </table>
                </div>

            </div>
        </div>
    </div>
}