@model IEnumerable<FMDSS.Models.WaterSourceDetail>


 

    <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
        <thead>
            <tr>
                <th>Sr. No.</th>
                <th>Source Name</th>
                <th>Destination Name</th>
                <th>Source Image</th>
                <th>Destination Image</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @Model.ElementAt(i).SourceName
                    </td>
                    <td>
                        @Model.ElementAt(i).DestinationName
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ElementAt(i).SourceImagePath))
                        {
                            <a href="/@Model.ElementAt(i).SourceImagePath" target="_blank" ><i class="fa fa-eye"></i></a>
                        }
                        else
                        {
                            @Html.Display("N/A")
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ElementAt(i).DestinationImagePath))
                        {
                            <a href="/@Model.ElementAt(i).DestinationImagePath" target="_blank"><i class="fa fa-eye"></i></a>
                        }
                        else
                        {
                            @Html.Display("N/A")
                        }
                    </td>
                    <td>
                        @Model.ElementAt(i).Date
                    </td>
                </tr>
            }

        </tbody>
    </table>

