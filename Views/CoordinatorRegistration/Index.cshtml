@model IEnumerable<FMDSS.Models.Admin.CordinatorManagement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script type="text/javascript" src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<!-- Datepicker Css -->
<link href="~/css/dashboard/datepicker.css" rel="stylesheet" type="text/css">

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Research Co-Ordinator/Supervisor Registration</h1>
    </div>
    @if (ViewBag.Status != null)
    {
        <div id="status" class="statusok">
            @ViewBag.Status
        </div>
    }
    <!-- /.col-lg-12 -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--<div class="panel-heading">Processing Fees</div>-->
                <!-- /.panel-heading -->
                @{ using (Html.BeginForm())
                 {
                    <div class="panel-body">
                        <div class="col-lg-3 pull-right">
                            <button type="button" class="btn btn-success btn_pp pull-right" name="btn_addpopip" value="" title="Add New Co-Ordinator/Supervisor" onclick="location.href='@Url.Action("CoordinatorRegistration", "CoordinatorRegistration")'">
                                <i class=" fa fa-plus">
                                </i> Add Co-Ordinator/Supervisor
                            </button>
                        </div>
                        <div class="dataTable_wrapper">
                            <div id="tbl" class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">

                                    <thead>
                                        <tr>
                                            <th style="width:7%;">S. No</th>
                                            <th>Coordinator ID.</th>
                                            <th>Name</th>
                                            <th>Adresss</th>
                                            <th>Action</th>
                                          

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>

                                                    @Html.DisplayFor(model => item.CoordinatorId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.CoordinatorNo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.CoordinatorName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Address)
                                                </td>
                                                <td>
                                                    <a type="button" class="btn btn-warning btn-circle" href='@Url.Action("Edit", "CoordinatorRegistration", new { id = item.CoordinatorId })'>
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>

                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                 }}
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

    </div>
</div>
<script type="text/javascript">
    if ('@ViewData["Message"]' != '') {
        alert('@ViewData["Message"]');
    }
    var RootUrl = '@Url.Content("~/")';

    $(document).ready(function () {

        $('#dataTables-example').DataTable({
            responsive: true
        });
    });

</script>
