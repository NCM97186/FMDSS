@{
    ViewBag.Title = "SSODETAILS";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/_SuperAdmin.cshtml";
}
@model FMDSS.Models.ForesterAction.USERDETAILS

<script type="text/javascript" src="~/js/jquery.min.js"></script>

<div class="row">

    <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog modal-lg" id="modelPlace1">
            <!-- Modal content-->
        </div>
    </div>

    <div class="col-lg-9 pad">
        <h1 class="page-header"><span>SSO ID Details</span></h1>
    </div>

    @using (Html.BeginForm("SSODETAILS", "UserManagementMaster", FormMethod.Post))
{
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="col-lg-2">
                    <div class="form-group">
                        <label>Ssoid <span class="mandatory">*</span></label>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        @Html.TextBoxFor(model => Model.Ssoid, new { @class = "form-control common", id = "Ssoid" })

                    </div>
                </div>
                <div class="col-lg-1">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="View" />
                    </div>
                </div>
            </div>
        </div>

        @if (Convert.ToBoolean(ViewBag.Rstatus) == false)
        {

        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="col-lg-12">
                        <div class="box box-default">                           
                            <section class="panel" id="SkrollThis2">
                                <div class="panel-body">
                                   
                                    <div class="task-thumb-details">
                                        <h1><a href="#"> @Html.DisplayFor(model => model.Name) </a></h1>
                                        <p>@Html.DisplayFor(model => model.Desig_Name) </p>
                                    </div>
                                </div>
                                <table class="table table-hover personal-task">
                                    <tbody>
                                        <tr>
                                            <td>Department</td>
                                            <td>@Html.DisplayFor(model => model.Department)</td>
                                        </tr>
                                        <tr>
                                            <td>Office</td>
                                            <td>@Html.DisplayFor(model => model.OfficeName)</td>
                                        </tr>
                                        <tr>
                                            <td>Role</td>
                                            <td>@Html.DisplayFor(model => model.Roles) </td>
                                        </tr>
                                        <tr>
                                            <td>Mobile No</td>
                                            <td>@Html.DisplayFor(model => model.Mobile)</td>
                                        </tr>
                                        <tr>
                                            <td>SSO ID</td>
                                            <td>@Html.DisplayFor(model => model.Ssoid) </td>
                                        </tr>
                                        <tr>
                                            <td>Old Single Role</td>
                                            <td>@Html.DisplayFor(model => model.OldSingleRole) </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </section>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>

                </div>
            </div>
        }
    </div>
}
</div>
