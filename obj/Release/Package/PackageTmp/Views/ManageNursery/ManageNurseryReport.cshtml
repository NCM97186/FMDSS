@{
    ViewBag.Title = "ManageNurseryReport";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/Forestlayout.cshtml";
}

<link href="~/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/mobile.css" rel="stylesheet">
<link href="~/css/main.css" rel="stylesheet">
<link href="~/css/dashboard/dashboard.css" rel="stylesheet" type="text/css">
<link href="~/css/dashboard/font-awesome.min.css" rel="stylesheet" type="text/css">
<link href="~/css/dashboard/datepicker.css" rel="stylesheet" type="text/css">


@using (Html.BeginForm("SubmitMeatingCollection", "MeatingCollection", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" id="Hdn_ID" name="ID" value="1">
    <div id="page-wrapper-inn">

        <div class="col-lg-12 pad">
            <div class="col-lg-10 pad">
                @if (@ViewData["Report_Level"] != null)
                {
                     <h1 class="page-header"><span>View Nursery (@ViewData["Report_Level"]  wise) </span></h1>
                }
               
               
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <div class="panel-body">

                            <div id="tbl" class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTableNursery">
                                    <thead>
                                        <tr>

                                            <th style="width:15%;">Division Name</th>
                                            <th style="width:15%;">Range Name</th>
                                            <th style="width:15%;">Village Name</th>
                                            <th style="width:15%;">Nursery Name</th>
                                            <th style="width:15%;">Species Name</th>
                                            <th style="width:15%;">Stock Quantity</th>
                                            <th style="width:15%;">Department used</th>
                                            <th style="width:15%;">Sold Quantity</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewData["lstNurseries"] as IEnumerable<FMDSS.Models.ForestProduction.NurseryManagement>)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(model => item.districtName)
                                                </td>
                                                
                                                <td>
                                                    @Html.DisplayFor(model => item.RangeName)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(model => item.villName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.nurseryName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.product)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.produceQty)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.d_produceQty)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.pur_produceQty)
                                                </td>

                                               
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <!-- /.panel-body -->

                    </div>
                    <!-- /.panel -->

                </div>

            </div>
        </div>
    </div>
}
<script src="~/js/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#dataTableNursery').DataTable({
            responsive: true
        });

    });

 </script>