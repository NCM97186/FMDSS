@using (Html.BeginForm("ForestFire", "ForestFire", FormMethod.Post, new { id = "myForm", enctype = "multipart/form-data" }))
{
    <div id="page-wrapper-inn">
        <div class="col-lg-12 pad">
            <h1 class="page-header">Forest Fire</h1>
        </div>
        <div class="row">
            <div class="col-lg-3 pull-right">
            </div>
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="panel-body">
                            <div class="col-lg-3"><input type="file" name="postedFile" /></div>
                            <div class="col-lg-3">
                                <input type="submit" value="Import" />
                            </div>
                            <div class="col-lg-3">
                                <a href="~/Help/Right_FIR_Report.xlsx" rel="noreferrer" >Download sample Template</a>
                            </div>

                        </div>
                        @Html.Partial("_ErrorMsg")
                        <div class="dataTable_wrapper">
                            <div id="tbl" class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-responsive" id="tbl_ForestFire">
                                    <thead>
                                        <tr>
                                            <th width="10%">SNo</th>
                                            <th width="10%">Fire_Date</th>
                                            <th width="10%">Fire_Time</th>
                                            <th width="10%">Source</th>
                                            <th width="10%">Latitude</th>
                                            <th width="10%">Longitude</th>
                                            <th width="10%">State</th>
                                            <th width="10%">District</th>
                                            <th width="10%">Circle</th>
                                            <th width="10%">Division</th>
                                            <th width="10%">Range</th>
                                            <th width="10%">Block</th>
                                            <th width="10%">Beat</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.SNo</td>
                                                <td>@item.Fire_Date</td>
                                                <td>@item.Fire_Time</td>
                                                <td>@item.Source</td>
                                                <td>@item.Latitude</td>
                                                <td>@item.Longitude</td>
                                                <td>@item.State</td>
                                                <td>@item.District</td>
                                                <td>@item.Circle</td>
                                                <td>@item.Division</td>
                                                <td>@item.Range</td>
                                                <td>@item.Block</td>
                                                <td>@item.Beat</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal fade in" id="myModal" role="dialog">
                    <div class="modal-dialog modal-lg" id="modelPlace" style="background-color:#fff !important;">
                    </div>
                </div>
            </div>
        </div>

    </div>
}
