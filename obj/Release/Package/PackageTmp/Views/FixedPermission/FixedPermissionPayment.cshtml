<div id="page-wrapper-inn">

    <div class="col-lg-12 pad">
        <h1 class="page-header">
            <!--<i class="fa fa-rupee"></i>--> Payment
            <!-- <small class="pull-right pdate">Date: 17/12/2015</small> -->
        </h1>
    </div>
    <!-- /.col-lg-12 -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section class="payment">

                        <!-- Table row -->
                        <div class="row">
                            <div class="col-xs-12 table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Requested ID</th>
                                            <th>Amount</th>
                                            <th>Discount</th>
                                            <th>Tax</th>
                                            <th>Service Charges</th>
                                            <th style="width: 5%;">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.TransactionId </td>
                                            <td>@Model.Amount </td>
                                            <td>@Model.Discount</td>
                                            <td>@Model.Tax</td>
                                            <td>0.00</td>
                                            <td><button type="button" class="btn btn-danger"><i class="fa fa-clock-o fa-fw"></i> @Model.PayStatus </button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-xs-12">
                                <span style="color:red;">Payment aggregator and bank charges will be extra as per their policy.</span>
                            </div>
                            <div class="col-xs-12">
                                <label>Total Amount Payable </label>: @Model.Final_Amount

                                @using (Html.BeginForm("Pay", "FixedPermission", FormMethod.Post, new { id = "pay" }))
                                {
                                    <button id="btnPay" type="submit" name="Command" value="pay" class="btn btn-primary pull-right"><i class="fa fa-check"></i>  Pay Now</button>
                                }


                            </div>
                        </div>
                    </section>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>