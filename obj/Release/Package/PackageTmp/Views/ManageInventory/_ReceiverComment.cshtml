 
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel"><b>Received Product Log</b></h4>
        </div>
        <div class="modal-body">
            <table class="table table-striped table-bordered table-hover">
                <tbody id="tbdyNewItemToInventory">
                    <tr>
                        <td>
                            <div class="panel-body">
                                <div class="table-responsive request-id">
                                    <table class="table table-striped table-bordered table-hover" id="dtReceiverLog">
                                        <thead>
                                            <tr>
                                                <th>S.No.</th> 
                                                <th>Depot Name</th>
                                                <th>Product</th>
                                                <th>Received Qty</th> 
                                                <th>Inventory Status</th>
                                                <th>Lot Number</th>
                                                <th>Comment</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if ((ViewData["ReceiverLog"] as IEnumerable<FMDSS.Models.ForestProduction.InventoryReceiverLog>).Count() > 0)
                                            {
                                                foreach (var item in ViewData["ReceiverLog"] as IEnumerable<FMDSS.Models.ForestProduction.InventoryReceiverLog>)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(model => item.SNo)</td>
                                                        <td>@Html.DisplayFor(model => item.Depot_Name)</td>
                                                        <td>@Html.DisplayFor(model => item.ProductName)</td>
                                                        <td>@Html.DisplayFor(model => item.ReceivedQty)</td> 
                                                        <td>@Html.DisplayFor(model => item.InventoryStatus)</td> 
                                                        <td>@Html.DisplayFor(model => item.DisplayLotNumber)</td> 
                                                        <td>@Html.DisplayFor(model => item.ReceiverComment)</td> 
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="7">No item received yet.</td></tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="btn" class="modal-footer">
            <button name="button" class="btn btn-danger" type="submit" value="Cancel" data-dismiss="modal">
                <i class="fa fa-times fa-fw"></i> Close
            </button>
        </div>
    </div> 