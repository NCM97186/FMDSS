@{
    ViewBag.Title = "Payment";
}

<style type="text/css">
    table.imagetable {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #999999;
        border-collapse: collapse;
    }

        table.imagetable th {
            background: #b5cfd2 url('cell-blue.jpg');
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
        }

        table.imagetable td {
            background: #ccc;
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
        }
</style>
<script type="text/javascript" language="javascript">

    $(document).ready(function () {

        function disableBack() { window.history.forward() }

        window.onload = disableBack();
        window.onpageshow = function (evt) {
            if (evt.persisted) disableBack()
        }

    });

</script>

<div id="page-wrapper-inn">

    <!--    content-->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--<div class="panel-heading"></div>
                <!-- /.panel-heading -->
                <br /><br /><br /><br />
                <table style="text-align:right; border-width:1px; margin:auto;" bordercolor="blue" cellpadding="2" cellspacing="5" class="imagetable">                   
                        <tr style="color:blue">
                            <th style="width:250px">Transaction_Id</th>
                            <th style="width:250px">Total fees</th>
                            <th style="width:250px">Tax Rate(%)</th>
                            <th style="width:250px">Discount(%)</th>
                            <th style="width:250px">Name</th>
                            <th style="width:250px">Status</th>
                        </tr>
                        @foreach (var item in ViewData.Model)
                        {
                            <tr style="color:Black">
                                <td>@item["Transaction_Id"] </td>
                                <td>@item["TotalFees"]</td>
                                <td>@item["TaxRate"]</td>
                                <td>@item["Discount"]</td>
                                <td>@item["EnterBy"]</td>
                                <td>@item["Status"]</td>
                            </tr>
                        }                                       
                </table>
                <br />
                <div style="text-align:center;">
                    <label>Total Cost</label>
                    @Html.Raw(HttpContext.Current.Session["totalprice"])
                </div>
                @using (Html.BeginForm("Pay", "OnlineTicketBooking", FormMethod.Post, new { id = "pay" }))
                {
                    <div style="text-align:center" class="form-horizontal" role="form">
                        <button id="btnPay" type="submit" name="Command" value="pay">Pay</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>










