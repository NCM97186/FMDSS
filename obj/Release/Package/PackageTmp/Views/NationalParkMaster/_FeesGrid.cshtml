@model List<FMDSS.Models.NationalPark.HeadWiseItemFeeModel>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th style="width:10%;">Sr No.</th>
                <th>Head Name</th>
                <th>Visitor Type</th>
                <th>Vehicle</th>
                <th>Fees Charge On</th>
                <th>Parent</th>
                <th>Amount</th>
                <th>Active</th>
                <th style="width:15%;">Action</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td width="10%">@i</td>
                    <td>@item.HeadName</td>
                    <td>@(item.VisitorType!="-" ? item.VisitorType : "All Vistiors")</td>
                    <td>@item.VehicleName</td>
                    <td>@item.ItemName</td>
                    <td>@item.ItemParentName</td>
                    <td>@item.Amount</td>
                    <td>@(item.IsActive ? "Yes" : "No")</td>
                    <td>
                        <button type="button" class="btn btn-warning btn-circle openpopup" data-id="@item.Id" data-toggle="modal" data-target="#myModal" title="Edit">
                            <i class="fa fa-edit"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>