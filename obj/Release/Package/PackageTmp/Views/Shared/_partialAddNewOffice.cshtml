@model FMDSS.Models.Master.UserProfileDetails


<link href="~/css/timepicki.css" rel="stylesheet" />
<script src="~/js/timepicki.js"></script>

<script type="text/javascript" src="~/js/jquery.min.js"></script>

<script>
    var RootUrl = '@Url.Content("~/")';

    $(document).ready(function () {

        $('#btn_submit1').click(function (e) {

            if ($('option:selected', $('#OfficeName')).index() == 0) {
                $("#errOfficeName").css("display", "block");
                $('#errOfficeName').focus();
                return false;
            }
            else {
                $("#errOfficeName").css("display", "none");
            }

           

        });



      

    });

</script>


@using (Html.BeginForm("AddNewOffice", "UserManagementMaster", FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                &times;
            </button>
            <h4 class="modal-title">
              Add New Office
            </h4>
        </div>

        <div class="modal-body">
            @Html.HiddenFor(model => model.Boundary)
          
           
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Boundary Name : <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control common",  @readonly = "readonly" })
                    <div id="errAmount" style="display:none" class="alert-danger1">Amount is Required.</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Office Name: <span class="mandatory">*</span></label>
                    @Html.TextBoxFor(model => model.OfficeName, new { @class = "form-control common", @maxlength = "120" })
                    <div id="errOfficeName" style="display:none" class="alert-danger1">Amount is Required.</div>
                </div>
            </div>

        </div>
        <div class="modal-footer" style="clear:both">
            <div id="btn" class="col-lg-12">

                <button type="submit" class="btn btn-success" value="Save" id="btn_submit1">
                    <i class="fa fa-check"></i> Save
                </button>

                <button type="button" id="btn_cancel" name="Command" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                    <i class="fa fa-times fa-fw"></i> Close
                </button>

            </div>

        </div>
    </div>

}