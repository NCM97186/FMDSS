    var RootURl = '@Url.Content("~/")';
    function Print(id)
    {
        $.ajax({
            type: 'POST',
            url: RootURl + 'BookOnlineZoo/PrintTicketExtraInventory',
            data: { ticketid: id },
            success: function (data) {

                $("#dvContainer").html(data);

                var contents = $("#dvContainer").html();
