
@model  FMDSS.Models.cls_HolidayDetails


<script>
    $(document).ready(function () {

        $('#dataTables-example1').DataTable({
            responsive: true
        });

    });
</script>

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
        <h4 class="modal-title">
            Place Name :  @TempData["PlaceName"]
        </h4>
    </div>

    <div class="modal-body">
        <div class="dataTable_wrapper">
            <div id="tbl" class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example1">

                    <thead>
                        <tr>
                            <th style="width:1px;">#</th>
                            <th width="5px">HolidayDate</th>
                            <th width="5px">Requested Date</th>
                            <th width="5px">Request By</th>
                            <th width="5px">Is Approved</th>
                            <th width="5px">Approved Date</th>
                            <th width="10px">Approver Name</th>
                            <th width="10px">ApproverMobile</th>

                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.RuleDetailsList != null)
                        {
                           foreach (var item in Model.RuleDetailsList)
                            {

                                <tr>
                                    <td>
                                        @item.cIndex
                                    </td>
                                    <td>
                                        @item.HolidayDate
                                    </td>
                                    <td>
                                        @item.EnterDate
                                    </td>
                                    <td>
                                        @item.EnterBy
                                    </td>
                                    <td>
                                        @item.IsActive
                                    </td>
                                    <td>
                                        @item.ApprovedDate
                                    </td>
                                    <td>
                                        @item.ApproverName
                                    </td>

                                    <td>
                                        @item.ApproverMobileNumber
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


