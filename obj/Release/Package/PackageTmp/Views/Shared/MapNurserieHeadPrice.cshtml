<div id="tblVehicle" class="table-responsive col-lg-12">
    <table id="tTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width:4%">Sr No</th>
                <th style="width:20%">Head Name</th>
                <th style="width:15%">Price (INR)</th>
            </tr>
        </thead>
        <tbody id="record" >
         
            @if (Model != null)
            {
                var i = 0;
                foreach (var item in Model as IEnumerable<FMDSS.Models.ForestProduction.MapNurserieHeadPrice>)
                {
                   
                    <tr >
                        <td style="width:5%!important;">@Html.TextBoxFor(X => X[i].NurseriesHeadID, new { id = "VSLNo" + i, @class = "NurseriesHeadID", @readonly = "readonly", @Value = item.NurseriesHeadID })</td>
                        <td>@Html.TextBoxFor(X => X[i].NurserieHeadName, new { id = "TypeOfVehicle" + i, @class = "TypeOfVehicle", @Value = item.NurserieHeadName, @readonly = "readonly" })</td>                        
                        <td>@Html.TextBoxFor(X => X[i].Price, new { id = "Price_" + i, maxlength = "3", @class = "Pricelst", @readonly = "readonly" })</td>
                        
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Total Price (INR)</label>
            @Html.TextBox("pricesumforshow", "", new { @class = "form-control", @id = "pricesumforshow", @maxlength = "5", @name = "pricesumforshow", @readonly = "readonly" })


        </div>
    </div>
</div>