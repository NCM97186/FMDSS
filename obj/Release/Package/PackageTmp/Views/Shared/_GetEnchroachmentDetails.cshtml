@model List<FMDSS.Models.Encroachment.ViewModel.EncroacherDetailsView>
@{
    ViewBag.Title = "Encroachment";
}



<div class="modal-content">

    <div class="modal-header">
        <h4 class="modal-title">Encroachment Members Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th> Encroacher Name </th>
                    <th>Encroacher FatherName</th>
                    <th> Encroacher Address </th>
                    <th> DOB </th>
                </tr>


                <tr>
                    @if (Model.Count > 0)
                    {
                        <td> @Model.FirstOrDefault().Encroacher_Name </td>
                        <td>@Model.FirstOrDefault().Encroacher_FatherName</td>
                        <td> @Model.FirstOrDefault().Encroacher_Address</td>
                        <td> @Model.FirstOrDefault().DOE </td>
                    }
                </tr>
            </tbody>
        </table>

        <h4 class="modal-title">KML Details</h4>
        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
            <tbody>
                <tr>
                    <th> Division Name </th>
                    <th>District Name</th>
                    <th> Block Name </th>
                    <th> Lat </th>
                    <th> Long </th>
                    <th> Area Shape in Hactare </th>
                    <th> Area </th>
                    <th> Village </th>
                </tr>
                @foreach (var itm in Model)
                {

                    <tr>
                        <td> @itm.DIV_NAME </td>
                        <td>@itm.DIST_NAME</td>
                        <td> @itm.BLK_NAME</td>
                        <td> @itm.GPSLat </td>
                        <td>@itm.GPSLong</td>
                        <td> @itm.AreaShapeinHactare</td>
                        <td> @itm.Area </td>
                        <td> @itm.Vill_Name </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer" style="clear:both">
        <div id="btn" class="col-lg-12">

            <button type="button" name="Command" class="btn btn-danger" data-dismiss="modal">
                Close
            </button>
        </div>
    </div>
</div>



<script type="text/javascript" src="~/js/jquery.min.js"></script>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/Common.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
