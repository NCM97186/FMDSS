@model FMDSS.Models.ForestProtection.ViewDetails

<style>
    #myModalDfo .modal-dialog {
        width: 900px;
        margin: 30px auto;
    }
</style>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Field</th>
                <th>Discription</th>              
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            FMDSS.Models.ForestProtection.ViewDetails myClass = new FMDSS.Models.ForestProtection.ViewDetails();
            myClass = Model;
            Type myClassType = myClass.GetType();
            System.Reflection.PropertyInfo[] properties = myClassType.GetProperties();

            foreach (System.Reflection.PropertyInfo property in properties)
            {
                if (@property.GetValue(myClass) != null && @property.GetValue(myClass) != "" && Convert.ToString(@property.GetValue(myClass)) != "0")
                {
                    if ((@property.Name == "Mokapunchnama" || @property.Name == "Najri_Naksha" || @property.Name == "Witness_Recorded1" || @property.Name == "Witness_Recorded2" || @property.Name == "Witness_Recorded3" || @property.Name == "Recommendation" || @property.Name == "FieldInspection") && (@property.GetValue(myClass).ToString()!="N/A"))
                    {                                                             
                      <tr>
                        <td>@property.Name</td>                                                 
                        <td><a href=@Url.Content(@property.GetValue(myClass).ToString()) target='_blank'><img src='../images/jpeg.png' width='30' /></a></td>
                    </tr>
                    }
                    else
                    { 
                     <tr>
                        <td>@property.Name</td>
                        <td>@property.GetValue(myClass)</td>
                    </tr>
                    }
                }              
            }                   
          }
        </tbody>
    </table>



</div>
