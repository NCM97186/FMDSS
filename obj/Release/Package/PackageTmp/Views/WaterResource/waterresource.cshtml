<script>
                  var RootUrl = '@Url.Content("~/")';
                $('#ddlDivision').change(function (e) {

                    var parentID = $("#ddlDivision option:selected").val();
                    $("#ddlRange").empty();

                    $.ajax({
                        type: 'POST',
                        url: RootUrl + 'WaterResource/GetRange',
                        dataType: 'json',
                        data: { "parentID": parentID },
                        success: function (response) {
                            $.each(response, function (i, items) {
                                $("#ddlRange").append('<option value="' + items.Value + '">  ' + items.Text + '</option>');
                            });
                        },
                        error: function (ex) {
                            alert('Failed to retrieve states.' + ex);
                        }
                    });
                });
</script>
