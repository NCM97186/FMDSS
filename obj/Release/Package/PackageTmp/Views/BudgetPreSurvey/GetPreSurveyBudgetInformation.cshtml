            if (ID != null && ID > 0) {
                $.ajax({
                    type: 'POST',
                    url: RootURl + 'BudgetPreSurvey/DeleteBudgetPreSurvey',
                    dataType: 'json',
                    data: { Id: ID },
                    success: function (data) {
                        if (data == '1') {
                            alert('Data deleted successfully');
                            reload();
                        }
                        else {
                            alert('Data not deleted from table please check!!!!');
                        }
                    },
                    traditional: true,
                    error: function (data) { console.log(data) }
                });
            }
        }
        else {

            return false;
        }
    }
