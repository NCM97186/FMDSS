@{
    ViewBag.Title = "Courthearingdetails";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); //  "~/Views/Shared/Forestlayout.cshtml";
}

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Court Hearing Details </h1>
    </div>
    <!-- /.col-lg-12 -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <!--Table-->
                    <div id="tbl" class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">

                            <thead>
                                <tr>
                                    <th style="width:6%;">S. No</th>
                                    <th>Offense Id</th>
                                    <th>Offender Name</th>
                                    <th>Father Name</th>
                                    <th>District</th>
                                    <th>Hearing Date</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewData["CHearingdataList"] as IEnumerable<FMDSS.Models.ForestProtection.CourtHearingDetail>)
                                {
                                    <tr>
                                        <td style="cursor:pointer">
                                            @Html.DisplayFor(model => item.Index)
                                        </td>
                                        <td  style="cursor:pointer">
                                            @Html.DisplayFor(model => item.OffenseCode)
                                        </td>
                                        <td  style="cursor:pointer">
                                            @Html.DisplayFor(model => item.OffenderName)
                                        </td>
                                        <td  style="cursor:pointer">
                                            @Html.DisplayFor(model => item.FatherName)
                                        </td>
                                        <td  style="cursor:pointer">
                                            @Html.DisplayFor(model => item.DIST_NAME)
                                        </td>
                                        <td style="cursor:pointer">
                                            @Html.DisplayFor(model => item.AppreanceDate)
                                        </td>

                                        
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                    
                    <!-- /.panel-body -->
                </div>
                <!-- ./New AssetForm Form -->
                <!-- /.panel -->

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div>
            <div class="btn-padd">
                <div id="btn" class="col-lg-12" style="margin-left:30px">
                    <button type="button" class="btn btn-success" name="Command" onclick="printDiv()">
                        <i class="fa fa-check"></i> Print
                    </button>


                </div>
            </div>

        </div>
    </div>
    <!-- /.Row -->

</div>

<script type="text/javascript" src="~/js/jquery.min.js"></script>
<script type="text/javascript">

    function printDiv() {
        var divToPrint = document.getElementById("tbl");
        newWin = window.open("");
        newWin.document.write(divToPrint.outerHTML);
        newWin.print();
        newWin.close();



    }
    </script>

