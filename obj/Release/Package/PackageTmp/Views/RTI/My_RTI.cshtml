@using System.Linq
@{
    ViewBag.Title = "My_RTI";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/_Layout.cshtml";
}
<style>
    .error, .errorText {
        color: #e85c41;
        font-weight: bold;
        text-align: center;
    }
</style>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/rs.js"></script>

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 id="Pheader" class="page-header">RTI</h1>
    </div>
    <div class="row">
        <!-- Tab1 -->
        <div class="col-md-12">
           <div class="tab-pane fade active in" id="tab1default">
               
                    <div class="table-responsive request-id">

                        @if (Model != null)
                        {
                            if (Model.Rows.Count > 0)
                            {
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            @foreach (System.Data.DataColumn col in Model.Columns)
                                            {
                                                <th>@col.Caption</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in Model.Rows)
                                        {
                                            <tr>
                                                @foreach (var cell in row.ItemArray)
                                                {
                                                    <td>  @Html.Raw(cell.ToString().Trim())</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            }
                            else
                            {<br />
                            <table><tr><td>There are no record found</td></tr></table>
                            }
                        }
                        else
                        {<br />
                            <table><tr><td>There are no record found</td></tr></table>
                        }
                    </div>
             
</div>
        </div>
    </div>
 </div>
