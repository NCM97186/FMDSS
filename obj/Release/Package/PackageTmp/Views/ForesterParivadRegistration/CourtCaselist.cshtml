@{
    ViewBag.Title = "CourtCaselst";
    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString()); // "~/Views/Shared/Forestlayout.cshtml";
}
@model FMDSS.Models.ForestProtection.ForesterParivad


<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Offense Details</h1>
    </div>
    <!-- /.col-lg-12 -->
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-lg-12">
                        <label>File Court Case:</label>
                        <div class="divider"></div>
                    </div>

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width:8%">Offense Code</th>
                                <th>Date of Offense </th>
                                <th>Offense palce</th>
                                <th>District</th>
                                <th>Complainant Type</th>
                                <th style="width:8%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewData["CourtCaseDetail"] != null)
                            {
                                foreach (var item in ViewData["CourtCaseDetail"] as IEnumerable<FMDSS.Models.ForestProtection.ForesterParivad>)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.OffenseCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.OffenseDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.OffensePlace)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.District)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.ComplaintFound)
                                        </td>
                                        <td>
                                            <a class="btn btn-success" href='@Url.Action("FileCourtCase", "ForesterParivadRegistration", new { @OffenseCode = Encryption.encrypt(item.OffenseCode)})'>
                                                Add Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>                
            </div>
        </div>
    </div>
</div>