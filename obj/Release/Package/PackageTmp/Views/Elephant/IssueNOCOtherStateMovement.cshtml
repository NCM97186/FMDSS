@model IEnumerable<FMDSS.Models.OtherStateElephantMovement>

@{
    ViewBag.Title = "IssueNOCOtherStateMovement";

    Layout = Convert.ToString(HttpContext.Current.Session["CurrentLayout"].ToString());


}


<script type="text/javascript">
        var RootUrl = '@Url.Content("~/")';

        $(document).ready(function () {

            $('#dataTables-example').DataTable({
                responsive: true
            });

        });
</script>

<div id="page-wrapper-inn">

    <div class="col-lg-12 pad">
        <h1 class="page-header">Other State Elephant Movement</h1>
        @if (ViewBag.RecordStatus == 1)
        {  <div id="divSuccess" class="alert alert-success"><i class="fa fa-thumbs-o-up fa-fw"></i>Record Successfully Submit</div>}
    </div>
    <div class="row">
        <div class="col-lg-4 pull-right" id="place">
            <button type="button" class="btn btn-success" id="btnAddModel" data-target="#myModal" data-toggle="modal" onclick="return GetDetails(0);" title="Create Place">
                <i class="fa fa-plus"></i> ADD
            </button>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default ">
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="tbl" class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">

                                <thead>
                                    <tr>

                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Request ID
                                        </th>
                                        <th>
                                            Travel Duration
                                        </th>
                                        <th>
                                            Return Duration
                                        </th>


                                        <th>
                                            Movement  From
                                        </th>
                                        <th>
                                            Movement To
                                        </th>
                                        <th>
                                            Other State Requested NOC
                                        </th>
                                        <th>
                                            Other State Contact No
                                        </th>
                                        <th>
                                            Created By
                                        </th>

                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Index)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnFromDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnToDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MovementFrom)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MovementTo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OtherStateRequestedTPNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OtherStateContactNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SSOID)
                                            </td>
                                            <td>
                                                <a title='Update Status' id="lnk_UpdateStatus" data-toggle="modal1" data-target="#myModal1" href='javascript:void(0)' onclick=GetDetails(@item.ID)>Print NOC</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-lg" id="modelDetails">
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="~/js/jquery.min.js"></script>

<script type="text/javascript">
    
    var RootUrl = '@Url.Content("~/")';
    function GetDetails(id) {
        $.ajax({
            type: 'GET',
            url: RootUrl + "Elephant/GetIssueNOCOtherStateMovement?ID=" + id,
            dataType: 'html',
            success: function (data) {
                console.log(data);
                $('#modelDetails').html(data);
            },
            error: function (ex) {
                alert(ex.error);
            }
        });
    };

</script>



