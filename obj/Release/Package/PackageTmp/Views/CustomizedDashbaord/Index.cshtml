@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FMDSS.Models.Master.CustomizedDashbaordModel>


<script type="text/javascript" src="~/js/jquery.min.js"></script>
<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header">Customzied Dashboard</h1>
    </div>
    <div class="row">
        <div class="col-lg-4 pull-right" id="place">
            <button type="button" class="btn btn-success" id="btnAddModel" data-target="#myModal" data-toggle="modal" onclick="return CallPlaceData(0);" title="Create Place">
                <i class="fa fa-plus"></i> Customzied Dashboard
            </button>
            <a href="~/SystemAdmin/ForestDashboard">
                <button type="button" class="btn btn-success" id="btnCancel" title="Cancel">
                    <i class="fa fa-plus">  </i> Cancel
                </button>
            </a>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="tbl" class="table-responsive">
                            <table id="tbltemp" class="table table-striped table-bordered table-hover table-responsive">

                                <thead>
                                    <tr>
                                        <th style="width:8%;">Module Name</th>
                                        <th width="20%">Status</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.Checked)

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "CustomizedDashbaord", FormMethod.Post, new { id = "myForm", enctype = "multipart/form-data" }))
            {

                <div class="modal fade in" id="myModal" role="dialog" aria-hidden="false" style="display: none;">
                    <div class="modal-dialog modal-sm" id="modelPlace">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">
                                    ×
                                </button>
                                <h4 class="modal-title">
                                    Customzied Dashboard
                                </h4>
                            </div>

                            <div class="modal-body">
                                <div class="checkbox checkbox-primary">
                                    @for (var i = 0; i < Model.Count(); i++)
                                    {
                                        <div class="checkbox">
                                            <label>
                                                @Html.HiddenFor(it => it[i].Name)
                                                @Html.CheckBoxFor(it => it[i].Checked)
                                                @Html.DisplayFor(it => it[i].Name)

                                            </label>
                                        </div>
                                    }
                                    @*<table>

                                            <tr>
                                                @for (var i = 0; i < Model.Count(); i++)
                                                {


                                                    <td>
                                                        @Html.HiddenFor(it => it[i].Name)
                                                        @Html.DisplayFor(it => it[i].Name)
                                                    </td>
                                                    <td>
                                                        @Html.CheckBoxFor(it => it[i].Checked, new { Style = "vertical-align:3px" })
                                                    </td>



                                                }
                                            </tr>
                                        </table>*@
                                </div>
                            </div>
                            <div class="modal-footer" style="clear:both">
                                <div id="btn" class="col-lg-12">

                                    <button type="submit" class="btn btn-success" value="Save" id="btn_submit1">
                                        <i class="fa fa-check"></i> Save
                                    </button>

                                    <button type="button" id="btn_cancel" name="Command" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                                        <i class="fa fa-times fa-fw"></i> Close
                                    </button>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
