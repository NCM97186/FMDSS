@model FMDSS.Models.CitizenService.PermissionServices.FixedLandUsage
@{
    ViewBag.Title = "FixedPermissionPayment";
}
<style type="text/css">
    table.imagetable {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #999999;
        border-collapse: collapse;
    }
    table.imagetable th {
        background: #b5cfd2 url('cell-blue.jpg');
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #999999;
    }
    table.imagetable td {
        background: #ccc;
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #999999;
    }
</style>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        function disableBack() { window.history.forward() }
        window.onload = disableBack();
        window.onpageshow = function (evt) {
            if (evt.persisted) disableBack()
        }
    });
</script>

<div id="page-wrapper-inn">
    <div class="col-lg-12 pad">
        <h1 class="page-header"></h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <section class="payment">
                        <div class="row">
                            <div class="col-xs-12 table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Requested ID</th>
                                            <th>Amount</th>
                                            <th>Discount</th>
                                            <th>Tax</th>
                                            <th>Service Charges</th>
                                            <th style="width: 5%;">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.TransactionId </td>
                                            <td>@Model.Amount </td>
                                            <td>@Model.Discount</td>
                                            <td>@Model.Tax</td>
                                            <td>5.00</td>
                                            <td><button type="button" class="btn btn-danger"><i class="fa fa-clock-o fa-fw"></i> @Model.PayStatus </button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row no-print">
                            <div class="col-xs-12">
                                <label>Total Amount Payable </label>: @Model.Final_Amount
                                @using (Html.BeginForm("Pay", "SWCS", FormMethod.Post, new { id = "pay" }))
                                {
                                    <button id="btnPay" type="submit" name="Command" value="pay" class="btn btn-primary pull-right"><i class="fa fa-check"></i>  Pay Now</button>
                                }
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>