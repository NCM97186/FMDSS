                                                    </button>*@
                                                    <button type="button" class="btn btn-warning btn-circle EditDepot" data-toggle="modal" data-target="#myModal" title="Edit" onclick="location.href='@Url.Action("ProgressEntry", "WorkOrder", new { WPID = Encryption.encrypt(item.ID.ToString()) })'">
                                                        <i class="fa fa-edit"></i>
                                                    </button>

