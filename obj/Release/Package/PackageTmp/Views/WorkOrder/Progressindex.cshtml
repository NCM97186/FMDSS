                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(model => item.RowID)
                                                    @Html.HiddenFor(model => item.ID)
                                                </td>
                                              
                                                <td>
                                                    @Html.DisplayFor(model => item.WorkOrder_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.WorkOrderType)
