@model FMDSS.Entity.FRAViewModel.WorkFlowApproverVM
@{
    var claimRequestDetailsID = Model.WorkFlowDetailsList.LastOrDefault().ClaimRequestDetailsID;
    var citizenRequest = Model.CitizenClaimRequestDetails;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button id="btnClose" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div> 
        <section class='print-invoice'>
            @*<div class="col-xs-12 col-sm-4" style="float:right;">
                <button id="btnSubmit" type="button" class="btn btn-info forward" onclick="PrintData('divPrint')">
                    <i class="fa fa-check"></i> PRINT
                </button>
            </div>*@ 
            <div class="col-xs-12 col-sm-4" style="float:right;">
                <button id="btnSubmit" type="button" class="btn btn-info forward" onclick="SaveAndDownloadReceipt(@citizenRequest.ClaimRequestDetailsID)">
                    <i class="fa fa-check"></i> Download
                </button> 
            </div> 
            <div id="divPrint">
                <div class='row border-divider'> 
                    <div class='col-xs-12 col-sm-4' style='padding: 0'><img src='../images/logo.png' alt='RISL'></div>
                    <div class='col-xs-12 col-sm-4 centr'><span>Department of Forest, <br>Goverment of<br> Rajasthan</span></div>
                    <div class='divider'></div>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <tr> <td colspan="2" style='text-align:center'>REQUEST CONFIRMATION SLIP</td></tr>
                    <tr>
                        <td><label>Request Type:</label></td>
                        <td>@citizenRequest.ClaimTypeName</td> 
                    </tr>
                    <tr>
                        <td><label>Request No:</label></td>
                        <td>@citizenRequest.ClaimRequestIDWithPrefix</td>
                    </tr>
                    <tr>
                        <td><label>Applicant Name:</label></td>
                        <td>@citizenRequest.ClaimantName</td>
                    </tr>
                    <tr>
                        <td><label>Block:</label></td>
                        <td>@citizenRequest.BlockName</td>
                    </tr>
                    <tr>
                        <td><label>Village:</label></td>
                        <td>@citizenRequest.VillageName</td>
                    </tr>
                    <tr>
                        <td><label>Gram Panchayat:</label></td>
                        <td>@citizenRequest.GPName</td>
                    </tr>
                    <tr>
                        <td><label>Current Status:</label></td>
                        <td>@citizenRequest.CurrentStatus</td>
                    </tr>
                    <tr>
                        <td><label>Applicant Comment:</label></td>
                        <td>@citizenRequest.RequesterComment</td>
                    </tr>
                    <tr>
                        <td><label>Raised On:</label></td>
                        <td>@string.Format("{0}", Convert.ToDateTime(citizenRequest.RaisedOn).ToString("dd-MMM-yyyy"))</td>
                    </tr>  
                </table>
            </div>
             
        </section>
        <div class="modal-footer" id="fot-f">
            <div id="btn" class="col-lg-12">
                <button id="btnCancel" name="button" class="btn btn-danger" type="button" value="Cancel" data-dismiss="modal" style="width: auto">
                    <i class="fa fa-times fa-fw"></i> Close
                </button>

            </div>
        </div>
    </div>
</div> 