</div>
<!-- /.Row -->  
<script src="~/Scripts/Controller/Common.js"></script> 
<script src="~/Scripts/Controller/ClaimRequest/WorkFlowCommon.js"></script> 
<script>
    var rootURl = '@Url.Content("~/")'; 
    function GetWorkFlowDetails(id) { 
        $.ajax({
            type: 'GET',
            url: rootURl + "ClaimRequest/GetWorkFlowDetails?userType=2&ClaimRequestDetailsID=" + id,
            dataType: 'html',
            success: function (data) {
                $('#modalWorkFlowDetails').html(data);
            },
            error: function (ex) { 
                console.log(ex.error);
            }
        }); 
    } 
</script> 
