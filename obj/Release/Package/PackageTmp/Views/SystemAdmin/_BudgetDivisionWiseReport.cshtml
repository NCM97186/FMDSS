@model IEnumerable<FMDSS.Models.ForesterDevelopment.BudgetAllocation.ViewModel.MonthlyProgressReportModel>
<table id="tbldetail" class="table table-striped table-bordered table-hover gridtable">
    <thead>
        <tr>
            <th>
                S.No
            </th>
            <th>
                Budget Head
            </th>
            <th>
                Sub Head
            </th>
            <th>
                Activity
            </th>
            <th>
                Sub Activity
            </th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
            {
            <tr>
                @{ i++;}
                <td>

                    @i
                </td>
                <td>
                    (@item.BudgetHead)

                </td>
                <td>
                    @(item.SubBudgetHead)

                </td>
                <td>
                    @item.Activity_Name
                </td>

                <td>
                    @(item.SubActivity_Name)
                </td>
                <td>
                    @(Convert.ToDouble(item.AllocatedAmount.ToString("0.00")))
                </td>
            </tr>
                    }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tbldetail').DataTable({
            "responsive": true,
            "bSort": true,
            "aLengthMenu": [[5, 10, 25, 50, 75, -1], [5, 10, 25, 50, 75, "All"]],
            "iDisplayLength": 5
        });
    });
</script>